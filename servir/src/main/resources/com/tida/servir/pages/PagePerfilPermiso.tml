<html t:type="layout" title="About servir"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <t:zone t:id="listapermisoZone" id="listapermisoZone">
<!--        <t:if test = "mostrarPermiso">-->
            <h3>Permisos</h3>
            <t:grid t:source="allPermisos" t:add="Acciones" pagerPosition="bottom" row="rowPermiso" exclude="rownum,menuId,perfilId" reorder="descmenu,accesoselect,accesoupdate,accesoinsert,accesodelete" >
                <p:accionesCell>
                    <a t:type="eventLink" t:event="eliminaPermiso" t:context="rowPermiso" href="#" t:zone="listapermisoZone">Eliminar</a>
                </p:accionesCell>
            </t:grid>
<!--        </t:if>-->
    </t:zone>

    <t:zone t:id="newPermisoZone" id="newPermisoZone">
        <t:if test = "mostrarNewPermiso">
            <div id="bouttons" class="f-right">
                <t:eventLink t:event="nuevoPermiso" href="#" page="PagePerfil" t:zone="editPermisoZone" class="button f-right">
                    Nuevo Perfil
                </t:eventLink>
            </div>
            <br class="clear"/>
        </t:if>
    </t:zone>
    <t:zone t:id="editPermisoZone" id="editPermisoZone">
        <t:if test = "mostrarEditPermiso">
            <h3>Crear/Editar Permisos a un determinado Perfil de Usuario</h3>
            <div id="box-cargos" class="box">
                
            </div>
        </t:if>
    </t:zone>
</html>
