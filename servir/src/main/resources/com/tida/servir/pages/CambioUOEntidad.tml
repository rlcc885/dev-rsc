<html t:type="layout" title="Sistema SERVIR"
      t:sidebarTitle="Current Time"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
        <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->

        <t:Menu/>
        
        
        <div class="organismo_titulo">
            Entidad /U. Ejecutora: ${entidadUE.denominacion}
        </div>
        <div id= "datosDestino" class="box">
            <h3> Seleccione una opci칩n</h3>
            <div class="f-wrap">
                <form t:type="form" t:id="formOpciones" t:zone="UOOrigenZone">
                    <div class="f-left">
                    Opciones
                    <input t:type="Select" t:id="cambio_opciones"
                    t:value="opcion" model="bopciones"/>
                    </div>
                </form>     
            </div>
        </div>
        
        <div id= "datosOrigen" class="box">
            <h3> Seleccione fuente de origen </h3>
            <div class="f-wrap">
                <div class="f-left">
                    <form t:type="form" t:id="formEOrigen">                            
                        <div class="f-wrap">
                            <div class="f-left">
                                Entidad Origen
                                <input t:type="TextField" t:id="entidad_den"
                                        t:value="entidad_origen" t:readonly="readonly" size="30"/>
                            </div>
                            <input t:type="Submit" t:id="buscar" value="..." class="button"/>
                        </div>                
                    </form>
                </div>
                <div class="f-left">
                    <t:zone t:id="UOOrigenZone">
                        <form t:type="form" t:id="formUOOrigen" t:zone="UOChangeZone"> 
                            <div class="f-left">
                            * Unidad Org치nica
                            <select t:type="select" t:id="select_unidadOrganicaOrigen"
                            model="beanUOrganicasOrigen" encoder="beanUOrganicasOrigen" value="uoOrigen"
                            t:validate="required"/>
                            </div>
                        </form>
                    </t:zone>
                </div>
            </div>
            
        </div>
        
        
        
        
          
