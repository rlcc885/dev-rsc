<html t:type="layout" title="Sistema SERVIR Reportes de Entidades"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"    
      xmlns:p="tapestry:parameter">

      <t:Menu/>
        <div class="organismo_titulo">
            Entidad /U. Ejecutora: ${entidadUE.denominacion}
        </div>

            <h2> Reportes de Entidades</h2>

                <div class="box">
                <h3> Seleccione par√°metros </h3>
                    <div id="ReporteEntidades" class="f-wrap">
                            <form t:type="form" t:id="formNivel" t:zone="SectorZone" class="f-left">
                                <div class="f-left">
                                    <t:label for="nivel_gobierno"/>
                                    <input t:type="Select" t:id="nivel_gobierno" t:value="nivel_gobierno"
                                    model="beanNivelGobierno" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)"
                                    t:validate="required" t:zone="SectorZone" t:blankOption="ALWAYS" />
                                </div>
                            </form>
                        <div class="f-left">
                        <t:zone t:id="SectorZone" class="f-left">
                            <form t:type="form" t:id="formSector" t:zone="PliegoZone">
                                <t:errors/>
                                <div class="f-left">
                                 <t:if test= "nivel_gobierno">
                                    <t:if test ="esLocal" negate = "true">
                                        <t:label for="sector"/>
                                          <p:else>
                                            <label>Departamento</label>
                                          </p:else>
                                        </t:if>
                                     <input t:type="Select" t:id="sector" t:value="sector" model="beanDatoAuxSector"
                                     onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)"
                                     t:zone="PliegoZone" />
                                 </t:if>
                                </div>
                            </form>
                        </t:zone>
                        <t:zone t:id="PliegoZone" class="f-left">
                            <form t:type="form" t:id="formPliego">

                                <div class="f-left">
                                    <t:if test= "nivel_gobierno">

                                        <t:if test ="esLocal" negate = "true">
                                            <t:label for="pliego"/>
                                              <p:else>
                                                <label>Provincia</label>
                                              </p:else>
                                        </t:if>
                                         <input t:type="Select" t:id="pliego" t:value="pliego" model="beanDatoAuxPliego"
                                         onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)" t:zone="PliegoZone"/>
                                    </t:if>
                                </div>

                            </form>
                        </t:zone>
                        </div>

                    </div> <!-- f-wrap -->
                </div>

                <div class = "box">
                <h3> Reportes </h3>
                    <a t:type="eventLink" t:event="reportePliego" href="#">Cargos por Pliego</a>
                    <br/>
                    <a t:type="eventLink" t:event="reporteSector" href="#">Cargos por Sector de Gobierno</a>
                    <br/>
                    <a t:type="eventLink" t:event="reporteNivel" t:context="literal:C5" href="#">Cargos por Nivel de Gobierno (sector/pliego/entidad)</a>
                    <br/>
                    <a t:type="eventLink" t:event="reporteNivel" t:context="literal:C6" href="#">Cargos por Nivel de Gobierno (pliego/sector/entidad)</a>
                </div> <!-- box -->
</html>