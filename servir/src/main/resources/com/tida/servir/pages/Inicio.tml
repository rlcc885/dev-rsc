<html t:type="layout" title="Sistema SERVIR"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
        <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->
        
        <div class="organismo_titulo">
           Listado de acciones realizadas por los usuarios ${entidadUE.denominacion}
        </div>
         
<!-- Listado de Entidades -->    
   <t:if test = "editable">
                                              
        <div id = "tabla_oi">
            <h2>Entidades/U. Ejecutoras</h2>
            <t:zone t:id="entidadZone">
                <t:envelope t:id="envelope"/>   
                <t:grid source="EntidadesUEjecutoras" rowsPerPage="10" t:add="Acciones" pagerPosition="bottom"
                    row="oi" exclude= "sector_rep, pliego_rep, proc_batch, def_servir, cue_entidad, cue_elemento, def_servir, TEMovilJefeRRHH, TEJefeRRHH, correoElectronicoJefeRRHH,
                    jefeRRHHEntidad, correoElectronicoTitular, titularEntidad, direcion, ruc, cod_mef_ue, correoElectronicoInstitucional, localidad, estado, clas_funcional, trabajadorAgregaDatos, nivel_gobierno, pliego, sector_gobierno" 
                    reorder="codigoEntidadUE,denominacion" >
                    <t:parameter name="empty">
                        <div class="no-info">No hay Entidades /U. Ejecutoras que hayan sido modificadas</div><br/>
                    </t:parameter>
                    <p:accionesCell>
                        <a t:type="pagelink" t:page="AMEntidadUEjecutora" t:context="oi.id" href="#">Ver Detalle</a>
                    </p:accionesCell>
                </t:grid>
            </t:zone>
        </div>
</t:if>  

        <div id="tablaTrabajador">
            <h2>Trabajadores</h2>
            <t:zone t:id="empleadoszone">
               
                <t:grid source="empleados" rowsPerPage="10" row="e" t:add="Acciones" 
                    pagerPosition="bottom" exclude="tipoDocumento,formacionInfAdicional" 
                    reorder="nroDocumento,apellidoPaterno,apellidoMaterno,nombres" 
                    t:context="e" t:rowclass="prop:selectionrow" 
                    include="tipoDocumento,nroDocumento,apellidoPaterno,apellidoMaterno,nombres">
                    <t:parameter name="empty">
                        <div class="no-info">
                            No se encontraron trabajadores que hayan modificado su legajo.
                        </div>
                    </t:parameter>
                    <p:accionesCell>
                        <a t:type="pagelink" t:page="LegajosModificar" t:context="e.id" href="#"> Ver Detalle </a>
                    </p:accionesCell>
                </t:grid>                
            </t:zone>      
        </div>
       
</html>