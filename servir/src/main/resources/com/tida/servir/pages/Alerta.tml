        <div t:type="zone" t:id="listasistemas" class="selectform" > 
            <t:if test="mostrars">
            <h2>Administrador de Sistemas</h2>
                <t:form t:id="formlistaunidad">              
                    <div id = "tabla_cargo">
                        <t:grid source="eventos" rowsPerPage="10" t:add="Acciones" pagerPosition="bottom"
                                row="le" exclude="id,estadoevento">
                            <t:parameter name="empty">
                                <div class="no-info">No se han registrado eventos</div>
                            </t:parameter>
                            <p:accionesCell>                           
                                    <t:actionlink t:id="editar" zone="listasistemas" context="le">OK</t:actionlink>
                            </p:accionesCell>
                        </t:grid>
                    </div>
                </t:form>
            </t:if>
        </div> <!-- tabla eventos -->
        
        <div t:type="zone" t:id="listaentidad" class="selectform" > 
            <t:if test="mostrare">
                <h2>Administrador de Entidades</h2>
                <t:form t:id="formlistaenti">              
                    <div id = "tabla_cargo">
                        <t:grid source="trabajadores" rowsPerPage="10" t:add="Acciones" pagerPosition="bottom"
                                row="lt" >
                            <t:parameter name="empty">
                                <div class="no-info">No se han registrado modificaciones de trabajadores</div>
                            </t:parameter>
                            <p:accionesCell>                           
                                    <t:actionlink t:id="editarenti" zone="listaentidad" context="lt">Validar</t:actionlink>
                            </p:accionesCell>
                        </t:grid>
                    </div>
                </t:form>   
            </t:if>
        </div> <!-- tabla eventos -->

