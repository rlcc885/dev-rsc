<html t:type="layout" title="Sistema SERVIR"
      t:sidebarTitle="Current Time"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
        <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->

        <div class = "login box">
             <h3>Inicio de Sesión</h3>

        <!-- <div id="dialog" title="Olvido su clave">${textoClave}</div> -->

        <div class = "OrganismosInformantes" t:id="organismosZone" t:type="zone">
            <t:if test="muestrosubmit">
                <t:form t:id="formulariologin"  t:zone="organismosZone" class="f-wrap">
                    <t:errors/>
                    <t:if test="muestrosubmit">
                        <div class="f-left">
                            <t:label for="login"/>
                            <input t:type="TextField" t:id="login" t:value="login" size="30"  />
                        </div>
                        <div class="f-left">
                            <t:label for="clave"/>
                            <input t:type="PasswordField" t:id="clave" size="30"  />
                        </div>
                        <div class="clear f-wrap">
                               <input id="loginSubmit" type="submit" value="Ingresar" class="button f-right" />
                        </div>
                    </t:if>
                </t:form>
            </t:if>

