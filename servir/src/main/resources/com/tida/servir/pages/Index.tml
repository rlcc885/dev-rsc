        </div>

    <script language="javaScript"> 
    function popup(ventana) {
            $(ventana).toggle('slow');
	}
    </script> 
        <div class="f-wrap centerImagenesIndex">
            <div class="f-left">
                <div class="seguridad-left">
                </div>
            </div>
            <div class="centerClave">
                <a href="javascript:popup('textoIndexClave');">Olvido su clave?</a><br/>
                <!-- <input onclick="javascript:popup('textoIndexClave');">Olvido su clave?</input><br/> -->
                <a href="javascript:popup('textoIndexUsuario');">Solicitar nuevo Usuario</a>
            </div>
            <div class="f-left">
                <div class="guia-right">
                </div>
            </div>
            <div class="centerClave">
                <a t:type="actionlink" t:id="returnstreamresponse" href="#">Guía del sistema</a>
		
            </div>
        </div>
        
    </div>

