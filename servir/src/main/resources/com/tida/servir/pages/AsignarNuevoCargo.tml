<html t:type="layout" title="Servir Cargos Asignados y Legajo"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">


        <div class="organismo_titulo">
            Entidad /U. Ejecutora: ${entidadUE.denominacion}
        </div>

      <div id = "Datos_Generales">
           <h2> Asignar nuevo cargo </h2>
           
      </div>

    <div class="box f-wrap">
        <h3>${trabajador.tipoDocumento}: ${trabajador.nroDocumento}
        ${trabajador.apellidoPaterno}  ${trabajador.apellidoMaterno} ${trabajador.nombres}</h3>

        
        <div class = "f-wrap">
            <t:zone t:id="unidadOrganicaZone">
                <t:form t:id="formulariounidadorganica" t:zone="cargosZone">
                    <div class ="f-left">
                        <label>* Unidad Organica</label>
                        <input t:type="Select" t:id="unidadorganica" t:value="unidadorganica" 
                        onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)" t:blankOption="ALWAYS"
                        model="beansUO" encoder="beansUO" t:validate="required" t:zone="cargosZone"/>
                    </div>
                </t:form>
            </t:zone>
        </div>

        <div id="cargoAsignado" class="f-wrap">
            <t:zone t:id="cargosZone">
                <t:form t:id="formularioasignar">
                    <t:errors/>
                    <t:if test="unidadSeleccionada">
                        <div class ="f-wrap">
                            <div class ="f-left">
                                <label>* Cargo</label>
                                <input t:type="Select" t:id="cargo" t:value="cargo" model="beans" encoder="beans" t:validate="required"/>
                            </div>
                            <div class ="f-left" id="fielddespuesdate">
                                <t:label for="fecha_inicio"/>
                                <input t:type="DateInput" t:id="fecha_inicio" t:date="fec_inicio"
                                    t:label="* Fecha de inicio" t:validate="required" size="10"/>
                            </div>
                            <div class ="f-left">
                                <t:label for="ctd_per_superv"/>
                                <input t:type="TextField" t:id="ctd_per_superv"
                                    t:value="ctd_per_superv" validate="maxlength=6" size="6"/>
                            </div>
                            <div class ="f-left">
                                <label>Tipo de vinculo</label>
                                <input t:type="Select" t:id="tipo" t:value="tipoVinculo" 
                                model="beansTipoVinculo"/>
                            </div>
                            <div class="actions f-right clear">
                                <input t:id="enviar" t:type="submit" value="Asignar" class="button f-right"/>
                            </div>
                        </div>
                        <t:parameter name="else">
                            No hay un cargo con la unidad organica seleccionada
                        </t:parameter>
                    </t:if>
                </t:form>
            </t:zone>
        </div>
    </div>
</html>