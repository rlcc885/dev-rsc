                                </a>
				</t:if>
			</p:acciones>
		</t:grid> -->
    </t:zone>

   </div>
    <div class="box-background-title">
        <span class="box-title">Crear / Editar Registro Tipos de Sanción</span>
    </div>
    <div class="box">
        
        <t:zone t:id="mensajesZone">
            <script>
                setTimeout(function(){ jQuery("#ok_msg").fadeOut(1000);}, 4000);
            </script>
            <t:form t:id="formularioMensajes">
                <t:envelope t:id="envelope"/>   
                <t:errors/>
            </t:form>      
        </t:zone>
    
        <t:zone t:id="tipoSancionZone">
        
            <t:form t:id="formularioTipoSancion" t:zone="mensajesZone">
            
               <t:if test="vformulario">
                   <fieldset> 
                   <div class="f-wrap">
                       <div class="f-left">
                           <label>* Descripción</label>
                           <input t:type="textfield" t:id="descripcion" t:value="valdescripcion" size="85" t:validate="required"  t:disabled="${vdetalle}"/>
                       </div>
                       <div class="f-left">
                       <label>* Categoría</label>
                           <select t:type="select" t:id="categoria" t:value="valcategoria" model="beanCategoria" t:validate="required" t:blankOption="ALWAYS" t:disabled="${vdetalle}"/> 
                       </div>  
                   </div>
                   <br/>    
                   <div class="f-wrap">
  
                       <div class="f-left">
                           <label>* Régimen Laboral</label>
                           <select t:type="select" t:id="regimenlaboral" t:value="valregimen" model="beanRegimen" t:validate="required" t:blankOption="ALWAYS" t:disabled="${vdetalle}"/> 
                       </div>
                       <div class="f-left">
                           <label>* Tipo de Inhabilitación</label>
                           <select t:type="select" t:id="tipoinhabilitacion" t:value="valtipo" model="beanTipo" t:validate="required" t:blankOption="ALWAYS" t:disabled="${vdetalle}"/>
                       </div>    
                   </div>
                   <br/>
                   <div class="f-wrap">
                       <div class="f-left">
                           <fieldset>
                               <legend>Periodo de Inhabilitacion </legend>
                               <div class="f-left">                               
                                   <label><center>Días</center></label>
                               <input t:type="textfield" t:id="ndias" t:value="valdias" size="10" t:validate="regexp" t:disabled="${vdetalle}"/>
                               </div>
                               <div class="f-left">
                                   <label><center>Meses</center></label>
                               <input t:type="textfield" t:id="nmeses" t:value="valmeses" size="10" t:validate="regexp" t:disabled="${vdetalle}"/>
                               </div>
                               <div class="f-left">
                                   <label><center>Años</center></label>
                               <input t:type="textfield" t:id="nanos" t:value="valanos" size="10" t:validate="regexp" t:disabled="${vdetalle}"/>
                               </div> 
                           </fieldset>                           
                       </div>    
                       <div class="f-left">
                           <fieldset>
                               <legend>* Tiempo de Visualización </legend>
                               <center>
                               <label>Meses</label>
                               <input t:type="textfield" t:id="tiempovisualizacion" t:value="valtiempo" t:validate="regexp,required" t:disabled="${vdetalle}"/>
                               </center>
                           </fieldset>                           
                       </div>    
                   </div>
                   <div class="f-wrap">
                       <div class="f-left">
                           <label>Observaciones</label>
                           <input t:type="textarea" t:id="observacion"  t:value="valobservacion" t:disabled="${vdetalle}" cols="86" rows="5"  t:validate="maxLength=250" />
                           <br/>
                           <i>(Máximo 250 caracteres)</i>
                       </div>    
                   </div>    
                </fieldset>   
               </t:if>    
               <div class="actions">     
                   <t:if test="${vbotones}">
                        <input t:type="Submit" t:id="save" value="Guardar" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button f-right"/> 
                   </t:if>
                   <t:if test="vNoedita">
              <!--          <input t:type="Submit" t:id="reset" value="Limpiar Formulario" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button f-right"/> -->
                        <t:eventLink t:event="reset" href="#" class="button f-right" t:zone="tipoSancionZone">
                            <span t:type="any" t:mixins="Confirm" t:message="Desea ejecutar esta acción?">
                                Limpiar Formulario
                            </span> 
                        </t:eventLink>
                   </t:if>
              <!--     <input t:type="Submit" t:id="cancel" value="Cancelar" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button f-right"/> -->
                    <t:eventLink t:event="cancel" href="#" class="button f-right" t:zone="tipoSancionZone">
                        <span t:type="any" t:mixins="Confirm" t:message="Desea ejecutar esta acción?">
                            Cancelar
                        </span> 
                    </t:eventLink>
                   
               </div>
                <t:if test="${vformulario}">  
                    <div class="f-wrap">                        
                    (*) Campos Obligatorios
                    </div> 
                </t:if>
            </t:form>
        
        </t:zone>

    </div>    
    
    
    
</html>