
<html t:type="layout" title="Editar Títulos"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
    

    
   <h1>Administración de Tipos de Sanciones</h1>
   <div class="box-background-title">
        <span class="box-title">Listado de Tipo de Sanción</span>
   </div>
   <div class="box">
           
    <t:zone t:id="listaTipoSancionZone">

<!--		<t:grid source="listadoTipoSanciones" rowsPerPage="10" t:add="Acciones" row="tsancion" inPlace="true">
			<t:parameter name="empty">
			    <div class="no-info">No se encontraron registros</div>
			</t:parameter>
