<html t:type="layout" title="Editar Antecedentes Laborales"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <t:content>
        <div name="antecedentes" id="antecedentes" class="pane" style="display:block;">
            <div class="t-zone" id="antecedentesZone">
                <h3>Antecedentes Laborales</h3>

                <form t:type="form" t:id="antLaboralesEdit" t:zone="prop:zone">
                    <t:errors/>
                    <t:envelope t:id="envelope"/>
                    <table class="t-data-grid">
                        <thead>
                            <tr>
                                <th>* Empresa</th>
                                <th>* Cargo</th>
                                <th>Función Principal</th>
                                <th>Motivo de Cese</th>
                                <th>* Fecha de Inicio</th>
                                <th>* Fecha de Finalización</th>
                                <th class="Acciones t-last">Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr t:type="AjaxFormLoop" t:id = "antecedentes" t:source="actual.ant_Laborales"
                            t:value="ant_Laborales" t:encoder = "encoder">

                                <t:submitnotifier>
                                    <td><input t:type="TextField" t:id="empresa" t:value="ant_Laborales.empresa" t:validate="required" disabled ="noeditable" /></td>
                                    <td><input t:type="TextField" t:id="cargo" t:value="ant_Laborales.cargo" t:validate="required" disabled ="noeditable" /></td>
                                    <td><input t:type="TextArea" t:id="funcion" value="ant_Laborales.funcion" disabled ="noeditable" /></td>
                                    <td><input t:type="TextArea" t:id="motivoCese" value="ant_Laborales.motivocese" disabled ="noeditable" /></td> 
                                    <td><input t:type="DateField" t:id="fec_ingreso" t:value="ant_Laborales.fec_ingreso" t:label="Fecha de ingreso" t:validate="required" size="10" disabled ="noeditable" /></td>
                                    <td><input t:type="DateField" t:id="fec_egreso" t:value="ant_Laborales.fec_egreso" t:label="Fecha de egreso" t:validate="required" size="10" disabled ="noeditable" /></td>
                                    <td>
                                        <t:if test = "editable">
                                            <t:removerowlink>Eliminar</t:removerowlink>
                                        </t:if>
                                    </td>
                                </t:submitnotifier>
                                <p:addRow>
                                    <td colspan="11" style="text-align: right">
                                        <t:if test = "editable">
                                            <t:addrowlink>Agregar Nuevo</t:addrowlink>
                                        </t:if>
                                    </td>
                                </p:addRow>
                            </tr>
                        </tbody>
                    </table>
                  <div class="actions f-right">
                        <t:if test = "editable">
                            <input type="submit" value="Guardar" class="button"/>
                        </t:if>
                    </div>                                           
                </form>
            </div>
         </div>
    </t:content>
          <div class="f-wrap">  
            <div t:type="zone" t:id="botonesZone" >
                    <t:form t:id="formulariobotones"  zone="botonesZone">

                    <div class="f-right">
                        <input t:type="Submit" t:id="cancel" value="Cancelar" class="button" t:mixins="confirm" /> 
                    </div>
                    <div class="f-right">
                        <input t:type="Submit" t:id="reset" value="Limpiar Formulario" class="button" t:mixins="confirm" />  
                    </div>
                    <div class="f-right">
                        <input t:type="Submit" t:id="seleccionarentidad" value="Seleccionar" class="button" t:mixins="confirm" />
                    </div>
                    </t:form>

            </div>
                
                
           </div>

</html>