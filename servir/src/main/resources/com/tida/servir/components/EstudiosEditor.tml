<html t:type="layout" title="Editar Títulos"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<t:content>

     <h3>Estudios</h3>
     
     <div t:type="zone" t:id="listaZone" class="selectform" >            
        <t:form t:id="formlistaestudios">
            <div id = "tabla_cargo">
                <t:grid source="estudios" rowsPerPage="10" t:add="Acciones" pagerPosition="bottom"
                        row="listaestu">
                    <t:parameter name="empty">
                        <div class="no-info">No se han registrado estudios</div>
                    </t:parameter>
                    <p:accionesCell>                           
                            <t:actionlink t:id="seleccionar" zone="listaZone" context="listaestu">OK</t:actionlink>
                    </p:accionesCell>
                </t:grid>
            </div>                    
        </t:form>           
    </div>
    <div t:type="zone" t:id="primerZone" class="selectform" > 
        <t:form t:id="formularioaltaestudio" zone="generalZone">
            <t:envelope t:id="envelope"/>
            <t:errors/>
            <div class="f-wrap">
                <div class="f-left">
                    <label>Denominación</label>
                    <input t:type="TextField" t:id="denominacion" t:value="valdenominacion"
                        size="30"/>
                </div>
                <!--<div class="f-left">
                    <label>Tipo Estudio</label>
                    <input t:type="TextField" t:id="nuevo_nroDocumento" t:value="actual.nroDocumento"
                        size="30" t:validate="required, regexp" />
                </div>  -->
            </div>
        </t:form>
    </div>
     
       
     
     
     
     
     
     
     
     
     
     
     
     
    </t:content>
</html>