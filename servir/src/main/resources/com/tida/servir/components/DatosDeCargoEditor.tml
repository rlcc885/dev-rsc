                    <h3> Cargo/Puesto: ${actual.den_cargo}</h3>
                    <!--<div class="f-wrap">
                        
                    </div>-->
                     <t:zone t:id="datosDeCargoZone">
                    <form t:type="form" t:id="formulariodatosdecargoasignado" t:zone="datosDeCargoZone">
                        <t:errors/>
                        <t:envelope t:id="envelope"/>
                        <br/>
                         <div class="f-wrap">
                            <div class="f-left">
                                <label><b>* Tipo de Vinculo:</b></label>
                                <div class="f-left">
                                    <input t:type="Select" t:id="tipovinculo" t:value="valtipovinculo" model="tipoVinculo" />
                                </div>
                            </div>
                            <div class="f-left">
                                <label><b>* Fecha de Inicio:</b></label>
                                <div class="f-left">
                                    <input t:type="DateField" t:id="fec_inicio" t:value="valfec_inicio"
                                    t:validate="required" size="30" />
                                </div>
                            </div>
                            <div class="f-left">
                                <label><b>Fecha de Finalización:</b></label>
                                <div class="f-left">
                                    <input t:type="DateField" t:id="fec_fin" t:value="valfec_fin"
                                            size="30"/>
                                   </div>
                            </div>
                         </div>
                        <br/>
                        <div class="f-wrap">
                            <div class="f-left">
                                <label><b>Motivo de Cese:</b></label>
                                <div class="f-left">
                                    <input t:type="TextField" t:id="motivo_cese" t:value="valmotivo" 
                                    size="30" t:zone="datosDeCargoZone"/>
                                </div>
                            </div>
                            <div class="f-left">
                                <b>Cargo/Puesto de Confianza</b>                                
                                    <t:radiogroup t:id="puesto_confianza" t:value="actual_asignado.puestoconfianza">
                                        <t:radio t:id="r1" t:value="true"/> Si <t:radio t:id="r2" t:value="false"/> No
                                        <!--<label> </label>-->
                                    </t:radiogroup>                                  
                            </div>
                        </div>
                            <div class="actions f-right">
                                <input t:type="Submit" t:id="save" value="Guardar" t:mixins="confirm" class="button"/> 
                                <input t:type="Submit" t:id="cancel" value="Cancelar" t:mixins="confirm" class="button"/>                                    
                            </div>
                     </form>
                     
                            

                            
                        
