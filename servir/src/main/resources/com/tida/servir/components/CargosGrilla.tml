<html t:type="layout" title="Editar Cargos Asignados"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<t:content>
     <t:grid source="cargosAsignados" t:id="grillaCargos" row="ca" t:add="Acciones, Den_Cargo"            
            reorder="Den_Cargo,fec_inicio,fec_fin,Acciones" exclude="tipoVinculo,ctd_per_superv,motivo_cese,estado,puestoconfianza">
            <t:parameter name="empty">
                El trabajador no contiene cargos asignados.
            </t:parameter>

        <p:den_cargoCell>
            ${ca.cargoxunidad.den_cargo}
        </p:den_cargoCell>

        <p:accionesCell>
        <a t:type="pagelink" t:page="CargosAsignadosModificar" t:context="ca.id" href="#">Editar</a>
         |<a t:type="pagelink" t:page="CargosAsignadosModificar" t:context="ca.id" href="#"> Desasignar</a>         
       <!-- | <a t:type="actionlink" t:id="reporteTrabajos" t:context="ca.legajo.id" href="#">Certificado de trabajo</a>-->
        


        </p:accionesCell>

     </t:grid>
    <a t:type="pagelink" t:page="TrabajadorNuevo" t:context="actual.id" href="#"> Asignar Nuevo Cargo</a>
