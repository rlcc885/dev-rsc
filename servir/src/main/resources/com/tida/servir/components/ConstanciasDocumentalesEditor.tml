<html t:type="layout" title="Documentos del Trabajador"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <t:content>
         <h2>Documentos del Trabajador</h2>

     <div id = "tabla_oi">
            <t:zone t:id="listaDocumentosZone">   
                <t:grid source="listadoDocumentos" rowsPerPage="10" t:add="Categoria,TipoDocumento,Obligatorio,Entrego,Acciones" pagerPosition="bottom"
                row="listaDocumentos" include="fecha" inPlace="true" >
                    <t:parameter name="empty">
                    <div class="no-info">No se encontraron registros</div>
                    </t:parameter>
                    <p:categoriaCell>
                               <label class="datofalse">${listaDocumentos.categoriaconstancia.valor}</label>  
                    </p:categoriaCell>
                    <p:tipoDocumentoCell>
                               <label class="datofalse">${listaDocumentos.tipoconstancia.valor}</label>  
                    </p:tipoDocumentoCell>
                    <p:obligatorioCell>
                           <t:if test="${listaDocumentos.obligatorio}">
                               <label class="datofalse">SI</label>  
                           </t:if>
                            <t:if test="${listaDocumentos.obligatorio}" negate="true">
                               <label class="datotrue">NO</label>  
                           </t:if> 
                    </p:obligatorioCell>
                    <p:entregoCell>
                           <t:if test="${listaDocumentos.entrego}">
                               <label class="datofalse">SI</label>  
                           </t:if>
                            <t:if test="${listaDocumentos.entrego}" negate="true">
                               <label class="datotrue">NO</label>  
                           </t:if> 
                    </p:entregoCell>
                      <p:accionesCell>
                               <t:actionlink t:id="editar" zone="documentosZone" context="listaDocumentos">Editar</t:actionlink> 
                    </p:accionesCell>
                </t:grid>
            </t:zone>
        </div>  

<div class="f-wrap">


</div>  
   
 <div class="box">
     <h3>Registro de Documentos Trabajador</h3>
     
            <div t:type="zone" t:id="mensajesDTZone" >
                <t:form t:id="formulariomensajesDT"  zone="mensajesDTZone"> 
                    <t:envelope t:id="envelope"/>
                    <t:errors/>
                </t:form> 
            </div>
     
     
          <div class="f-wrap">  
            <div t:type="zone" t:id="documentosZone" >
                    <t:form t:id="formularioDocumentos"  zone="documentosZone">

                        <div class="f-wrap">
                            <!--
                            <div class="f-left">
                                 <label>Cargo Asignado</label>
                                <select t:type="Select" t:id="cagoasignado" t:value="constancia.cargoasignado"
                                        model="cargosAsignados" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)"
                                        t:blankOption="ALWAYS" />
                            </div>
                            -->
                            <div class="f-left" >
                                <label>Categoría</label>
                                <input t:type="Select" t:id="categoria" t:value="constancia.categoriaconstancia" 
                                       model="beanCategoria" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)" 
                                       t:blankOption="ALWAYS" />
                            </div>
                            <div class="f-left" >
                                <label>Tipo Documento</label>
                                <input t:type="Select" t:id="tipoDocumento" t:value="constancia.tipoconstancia" 
                                       model="beanTipoDocumento" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)" 
                                      t:blankOption="ALWAYS" />
                            </div>   
                             
                        </div>
                         <div class="f-wrap">
                           
                            <div class="f-left">
                                <label>¿Obligatorio?</label>
                                <input t:type="Select" t:id="bobligatorio"
                                        t:value="bobligatorio"  model="literal:NO,SI" />
                            </div>
                            <div class="f-left">
                                <label>* ¿Entrego?</label>
                                <input t:type="Select" t:id="bentrego"
                                        t:value="bentrego"  model="literal:NO,SI" />
                            </div>
                             <div class="f-left">	
                                <label>* Fecha Entrega</label>
                                <input t:type="DateField" t:id="fecha" t:value="constancia.fecha" t:validate="required"
                                       size="10" />
                            </div> 
                             
                        </div>
                 <div class="f-wrap">
                        <div class="f-right">
                                    <input t:type="Submit" t:id="guardar" value="Guardar" class="button" t:mixins="confirm" t:message="Desea ejecutar esta acción?" />
                        </div>
                        </div>
                    </t:form>  
            </div> 
     
            <div t:type="zone" t:id="botonesZone" >
                <t:form t:id="formulariobotones"  zone="documentosZone">
                <div class="f-wrap">
                    <div class="f-right">
                        <input t:type="Submit" t:id="cancel" value="Cancelar" class="button" t:mixins="confirm" t:message="Desea ejecutar esta acción?" /> 
                    </div>
                    <div class="f-right">
                        <input t:type="Submit" t:id="reset" value="Limpiar Formulario" class="button" t:mixins="confirm" t:message="Desea ejecutar esta acción?" />  
                    </div>
                </div>
                </t:form>


            </div>
     
        </div>
        
</div>      

    </t:content>
</html>