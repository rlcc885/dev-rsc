<html t:type="layout" title="Editar Cursos"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<t:content>
     
    <fieldset>          
      <t:zone t:id="primeraZone">         
         <t:if test="${vformulario}">          
            <t:form t:id="formularioprimero" zone="primeraZone">                
                <div class="f-wrap">
                    <div class="f-left">
                        <label>* Tipo de Estudios</label>
                        <input t:type="Select" t:id="tipoestudio" model="tipoestudios" t:value="valtipoestudio" onChange="this.form.fire()" t:disabled="${vdetalle}" t:zone="primeraZone"/>
                    </div>
                    <div class="f-left">
                        <label>* Denominación</label>
                        <input t:type="TextField" t:id="denominacion" t:value="valdenominacion" size="70" t:disabled="${vdetalle}"
                            t:mixins="zoneUpdater" t:clientEvent="keyup" t:event="denChanged"  t:zone="primeraZone" />
                    </div>               
                </div>
                <br/>
                <div class="f-wrap">
                    <div class="f-left">
                        <label>* Centro de Estudios</label>
                        <input t:type="Select" t:id="centroestudio" model="centroestudios" t:value="valcentroestudio" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)"  t:disabled="${vdetalle}" t:zone="primeraZone"/>
                    </div>
                    <div class="f-left">
                        <label>Otro Centro Especificar</label>
                        <input t:type="TextField" t:id="otrocentro" t:value="valotrocentro" size="30" t:disabled="${votro}"
                            t:mixins="zoneUpdater" t:clientEvent="keyup" t:event="otroChanged"  t:zone="primeraZone"/>
                    </div> 
                </div>
         </t:form>
          </t:if>
      </t:zone>
      <!--<t:zone t:id="segundaZone">
        <t:if test="${vformulario}">
          <t:form t:id="formulariosegundo" t:zone="terceraZone">
                <div class="f-wrap">
                    
                    
                    
                </div>           
          </t:form>
        </t:if>
      </t:zone>-->
     <br/>
     <t:zone t:id="terceraZone">
       <t:if test="${vformulario}">
        <t:form t:id="formulariotercero" t:zone="listadoZone">
            <div class="f-wrap">
               <div class="f-left"> 
                <div style="width:230px;">               
                  <fieldset>
                  <legend>* Periodo</legend>   
                    <div class="f-wrap">
                        <label>Actualmente estudiando</label>
                        <!--<span t:type="any" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)" t:zone="segundoZone">-->
                        <input t:type="Checkbox" t:id="estudiando" t:value="valestudiando" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)" t:disabled="${vdetalle}" t:zone="terceraZone"/><!--</span>-->
                    </div> 
                    <div class="f-wrap">
                        <label>Desde</label>
                        <div class="f-left">
                            <!--
                            <input t:type="DateField" t:id="fec_inicio" t:value="valfec_desde"
                            size="25" t:disabled="${vdetalle}" t:readonly="readlony"/>
                            -->
                            <input t:type="TextField" t:id="fec_inicio" t:value="valfec_desde"  size="25" t:disabled="${vdetalle}" t:readonly="readlony"/>
                            <img src="${context:layout/images/cal3.gif}" border="0" width="18" height="16" onclick="popUpCalendar(this, formulariotercero.fec_inicio, 'dd/mm/yyyy');" style="cursor:hand;"></img>
                        </div>
                    </div>
                    <div class="f-wrap">
                        <label>Hasta</label>
                        <div class="f-left">
                            <!--
                            <input t:type="DateField" t:id="fec_fin" t:value="valfec_hasta"
                                    size="25" t:disabled="${vfechahasta}" t:readonly="readlony"/>
                            -->
                            <input t:type="TextField" t:id="fec_fin" t:value="valfec_hasta"  size="25" t:disabled="${vfechahasta}" t:readonly="readlony"/>
                            <img src="${context:layout/images/cal3.gif}" border="0" width="18" height="16" onclick="popUpCalendar(this, formulariotercero.fec_fin, 'dd/mm/yyyy');" style="cursor:hand;"></img>
                            </div>                        
                    </div>
                </fieldset>
                </div>
               </div>
                <div class="f-left">
                    <label>Fuera del Pais</label>
                    <!--<span t:type="any" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)" t:zone="segundoZone">-->
                    <input t:type="Checkbox" t:id="pais" t:value="valfuera" onChange="this.form.fire()" t:disabled="${vdetalle}" t:zone="terceraZone"/>
                </div>
             </div>
            <br/>
            <div class="f-wrap">
                    <t:if test="${vrevisado}">
                        <div class="f-left">
                            Revisado <input t:type="Checkbox" t:id="revisado" t:value="valrevisado" t:disabled="${vdetalle}"/>     
                        </div>
                    </t:if>
            </div>
              
            <t:if test="${vbotones}">
                <div class="actions f-right">
                    <input t:type="Submit" t:id="reset" value="Limpiar Formulario" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button"/> 
                    <input t:type="Submit" t:id="save" value="Guardar" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button"/>
                    <input t:type="Submit" t:id="cancel" value="Cancelar" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button"/> 
                   
                </div>
            </t:if>
        </t:form>
             </t:if>
     </t:zone>
    </fieldset> 
    <div class="f-wrap">
       (*) Campos Obligatorios                      
    </div>
    <br/> 
    <div id = "tabla_oi">
        <t:zone t:id="listadoZone">  
            <t:form t:id="formlistacursos">
                 <t:envelope t:id="envelope"/>   
                <t:errors/>
                <br/>
                <div id = "tabla_cargo">
                    <t:grid source="listacur" rowsPerPage="10" t:add="Acciones" pagerPosition="bottom"
                            row="listacurso" inPlace="true"> 
                        <p:tipo_estudioCell>
                           <t:if test="${listacurso.validado}">
                               <label class="datofalse">${listacurso.tipo_estudio}</label>  
                           </t:if>
                           <t:if test="${listacurso.validado}" negate="true">
                               <label class="datotrue">${listacurso.tipo_estudio}</label>  
                           </t:if>
                        </p:tipo_estudioCell>                        
                        <p:denominacionCell>
                           <t:if test="${listacurso.validado}">
                               <label class="datofalse">${listacurso.denominacion}</label>  
                           </t:if>
                           <t:if test="${listacurso.validado}" negate="true">
                               <label class="datotrue">${listacurso.denominacion}</label>  
                           </t:if>
                        </p:denominacionCell>
                        <p:centro_estudioCell>
                           <t:if test="${listacurso.validado}">
                               <label class="datofalse">${listacurso.centro_estudio}</label>  
                           </t:if>
                           <t:if test="${listacurso.validado}" negate="true">
                               <label class="datotrue">${listacurso.centro_estudio}</label>  
                           </t:if>
                        </p:centro_estudioCell>
                        <p:estadoCell>
                           <t:if test="${listacurso.validado}">
                               <label class="datofalse">
                                   <t:if test="${listacurso.estado}">
                                       Culminado
                                   </t:if>
                                   <t:if test="${listacurso.estado}" negate="true">
                                       Incompleto
                                   </t:if>
                               </label>  
                           </t:if>
                           <t:if test="${listacurso.validado}" negate="true">
                               <label class="datotrue">
                                   <t:if test="${listacurso.estado}">
                                       Culminado
                                   </t:if>
                                   <t:if test="${listacurso.estado}" negate="true">
                                       Incompleto
                                   </t:if>
                               </label>  
                           </t:if>
                        </p:estadoCell>                       
                        <p:validadoCell>
                            <t:if test="${vrevisado}"> 
                                <t:if test="${listacurso.validado}">
                                    <label class="datofalse">SI</label>  
                                </t:if>
                                <t:if test="${listacurso.validado}" negate="true">
                                    <label class="datotrue">NO</label>  
                                </t:if>
                             </t:if>
                        </p:validadoCell>                 
 
                        <t:parameter name="empty">
                                <div class="no-info">No existen registros ingresados</div>
                        </t:parameter>
                        
                        <p:accionesCell>
                            <t:if test="${veditar}">
                                <t:if test="${listacurso.validado}" negate="true" >
                                    <t:actionlink t:id="editar" zone="listaZone" context="listacurso">Editar</t:actionlink>
                                </t:if>
                                <t:if test="${listacurso.validado}">
                                    <t:actionlink t:id="detalles" zone="listaZone" context="listacurso">Detalle</t:actionlink>
                                </t:if>
                            </t:if>
                            <t:if test="${veditar}" negate="true">
                                <t:actionlink t:id="detalle" zone="listaZone" context="listacurso">Detalle</t:actionlink>
                            </t:if>
                            <t:if test="${veliminar}">
                                <t:if test="${listacurso.validado}" negate="true">
                                | <a t:type="eventLink" t:event="borrarDato" t:context="listacurso"
                                     t:zone="listaZone" href="#"><span t:type="any" t:mixins="Confirm" t:message="¿Desea eliminar el registro?">
                                    Eliminar
                                    </span></a>
                                </t:if>
                            </t:if>
                                
                        </p:accionesCell>
                    </t:grid>
                </div>               
            </t:form>           
        </t:zone>
     </div> 
     

    </t:content>
</html>