
<html t:type="layout" title="Editar Cursos"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <t:content>
        <t:zone t:id="mensajescurso">
            <script>
                setTimeout(function(){ jQuery("#ok_msg").fadeOut(1000);}, 4000);
            </script>
            <t:form t:id="formlistacursos">
                <t:envelope t:id="envelope"/>   
                <t:errors/>
            </t:form>
        </t:zone>
        <t:zone t:id="primeraZone">         
            <t:if test="${vformulario}">
                <t:form t:id="formularioprimero" zone="mensajescurso">
                    <fieldset>             
                        <div class="f-wrap">
                            <div class="f-left">
                                <label>* Tipo de Estudios</label>
                                <input t:type="Select" t:id="tipoestudio" model="tipoestudios" 
                                       t:value="valtipoestudio" t:disabled="${vdetalle}" />
                            </div>
                            <div class="f-left">
                                <label>* Denominaci贸n</label>
                                <input t:type="TextField" t:id="denominacion" t:value="valdenominacion" size="70" t:disabled="${vdetalle}" />
                            </div>               
                        </div>
                        <div class="f-wrap">
                            <div class="f-left">
                                <label>* Centro de Estudios</label>
                                <select t:type="Select" t:id="centroestudio" model="centroestudios" 
                                        t:value="valcentroestudio"
                                        t:disabled="${vdetalle}" t:zone="centroZone"/>
                            </div>
                            <div class="f-left">
                                <label>Otro Centro Especificar</label>
                                <t:zone t:id="centroZone" id="centroZone">
                                    <input t:type="TextField" t:id="otrocentro" t:value="valotrocentro" size="30" t:disabled="${votro}"/>
                                </t:zone>
                            </div>
                            <div class="f-left">
                                <label>Fuera del Pais</label>
                                <input t:type="Checkbox" t:id="pais" t:value="valfuera" t:disabled="${vdetalle}"/>
                            </div>
                        </div>
                        <!--                    </t:form>
                    </t:if>
                </t:zone>
                <t:zone t:id="terceraZone">
                    <t:if test="${vformulario}">
                        <t:form t:id="formulariotercero" t:zone="mensajescurso">-->
                        <fieldset>
                            <legend>* Periodo</legend>   
                            <div class="f-wrap">
                                <div class="f-left">
                                    <label>Actualmente estudiando</label>
                                    <input t:type="Checkbox" t:id="estudiando" t:value="valestudiando" onChange="toggleStatusCurso()" t:disabled="${vdetalle}" t:zone="terceraZone" class="idestudiando"/>
                                </div> 
                                <div class="f-left">
                                    <label>Desde</label>
                                    <input t:type="TextField" t:id="fec_inicio_curso" t:value="valfec_desde" size="25" t:validate="regexp" t:disabled="${vdetalle}" class="fec_inicio_curso pictureInputDate"/>
                                </div>
                                <div class="f-left">
                                    <label>Hasta</label>
                                    <input t:type="TextField" t:id="fec_fin_curso" t:value="valfec_hasta" size="25" t:validate="regexp" t:disabled="${vfechahasta}" class="fec_fin_curso pictureInputDate"/>
                                </div>
                            </div>
                        </fieldset>
                        <div class="f-wrap">
                            <t:if test="${vrevisado}">
                                <div class="f-left">
                                    Revisado 
                                    <input t:type="Checkbox" t:id="revisado" t:value="valrevisado" t:disabled="${vdetalle}"/>     
                                </div>
                            </t:if>
                        </div>
                        <!--<t:if test="${vbotones}">-->
                        <div class="actions">
                            <div class="f-left"> (*) Campos Obligatorios </div>
                            <t:if test="${vbotones}">
                                <input t:type="Submit" t:id="save" value="Guardar" t:mixins="confirm" t:message="Desea ejecutar esta acci贸n?" class="button f-right"/>
                            </t:if>
                            <input t:type="Submit" t:id="reset" value="Limpiar Formulario" t:mixins="confirm" t:message="Desea ejecutar esta acci贸n?" class="button f-right"/> 
                            <input t:type="Submit" t:id="cancel" value="Cancelar" t:mixins="confirm" t:message="Desea ejecutar esta acci贸n?" class="button f-right"/> 
                        </div>
                        <!--</t:if>-->
                    </fieldset> 
                </t:form>
            </t:if>
            <div>
                
            </div>
        </t:zone>

        <div id = "tabla_oi">
            <t:zone t:id="listadoZone">  
                <div id = "tabla_cargo">
                    <t:grid source="listacur" rowsPerPage="10" t:add="Acciones" pagerPosition="bottom"
                            row="listacurso" inPlace="true"> 
                        <p:tipo_estudioCell>
                            <t:if test="${listacurso.validado}">
                                <label class="datofalse">${listacurso.tipo_estudio}</label>  
                            </t:if>
                            <t:if test="${listacurso.validado}" negate="true">
                                <label class="datotrue">${listacurso.tipo_estudio}</label>  
                            </t:if>
                        </p:tipo_estudioCell>                        
                        <p:denominacionCell>
                            <t:if test="${listacurso.validado}">
                                <label class="datofalse">${listacurso.denominacion}</label>  
                            </t:if>
                            <t:if test="${listacurso.validado}" negate="true">
                                <label class="datotrue">${listacurso.denominacion}</label>  
                            </t:if>
                        </p:denominacionCell>
                        <p:centro_estudioCell>
                            <t:if test="${listacurso.validado}">
                                <label class="datofalse">${listacurso.centro_estudio}</label>  
                            </t:if>
                            <t:if test="${listacurso.validado}" negate="true">
                                <label class="datotrue">${listacurso.centro_estudio}</label>  
                            </t:if>
                        </p:centro_estudioCell>
                        <p:estadoCell>
                            <t:if test="${listacurso.validado}">
                                <label class="datofalse">
                                    <t:if test="${listacurso.estado}">
                                        Culminado
                                    </t:if>
                                    <t:if test="${listacurso.estado}" negate="true">
                                        Incompleto
                                    </t:if>
                                </label>  
                            </t:if>
                            <t:if test="${listacurso.validado}" negate="true">
                                <label class="datotrue">
                                    <t:if test="${listacurso.estado}">
                                        Culminado
                                    </t:if>
                                    <t:if test="${listacurso.estado}" negate="true">
                                        Incompleto
                                    </t:if>
                                </label>  
                            </t:if>
                        </p:estadoCell>                       
                        <p:validadoCell>
                            <!--                            <t:if test="${vrevisado}"> -->
                            <t:if test="${listacurso.validado}">
                                <label class="datofalse">SI</label>  
                            </t:if>
                            <t:if test="${listacurso.validado}" negate="true">
                                <label class="datotrue">NO</label>  
                            </t:if>
                            <!--                            </t:if>-->
                        </p:validadoCell>                 
                        <t:parameter name="empty">
                            <div class="no-info">No existen registros ingresados</div>
                        </t:parameter>
                        <p:accionesCell>
                            <t:if test="${veditar}">
                                <t:if test="${listacurso.validado}" negate="true" >
                                    <t:actionlink t:id="editar" zone="listaZone" context="listacurso">Editar</t:actionlink>
                                </t:if>
                                <t:if test="${listacurso.validado}">
                                    <t:actionlink t:id="detalles" zone="listaZone" context="listacurso">Detalle</t:actionlink>
                                </t:if>
                            </t:if>
                            <t:if test="${veditar}" negate="true">
                                <t:actionlink t:id="detalle" zone="listaZone" context="listacurso">Detalle</t:actionlink>
                            </t:if>
                            <t:if test="${veliminar}">
                                <t:if test="${listacurso.validado}" negate="true">
                                    | 
                                    <a t:type="eventLink" t:event="borrarDato" t:context="listacurso"
                                       t:zone="listaZone" href="#">
                                        <span t:type="any" t:mixins="Confirm" t:message="驴Desea eliminar el registro?">
                                            Eliminar
                                        </span>
                                    </a>
                                </t:if>
                            </t:if>
                        </p:accionesCell>
                    </t:grid>
                </div>               
            </t:zone>
        </div>
        
<!--        <script>
            jQuery(document).ready(function() {
            jQuery('.fec_inicio_curso').datepick({dateFormat: 'dd/mm/yyyy'});
            jQuery('.fec_fin_curso').datepick({dateFormat: 'dd/mm/yyyy'});
            });
            function toggleStatusCurso() {
            if (jQuery('.idestudiando').is(':checked')) {
            jQuery('.fec_fin_curso').attr('disabled', true);
            } else {
            jQuery('.fec_fin_curso').removeAttr('disabled');
            }
            }
        </script>-->
    </t:content>
</html>