<html t:type="layout" title="Editar Títulos"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<t:content>

     <h3>Títulos</h3>
       <div class = "scrolleable">

    	<form t:type="form" t:id="titulosEdit" t:zone="prop:zone">
		<t:errors/>
                <t:envelope t:id="envelope"/>
		<table class="t-data-grid">
                    <thead>
                        <tr>
                            <th>* Nivel</th>
                            <th>* Denominación</th>
                            <th>Especialidad</th>
                            <th>* Centro de estudios</th>
                            <th>* Lugar emisión</th>
                            <th>* Fecha emisión</th>
                            <th>Colegio Prof.</th>
                            <th>N. Colegiatura</th>
                            <th>Cargado trabajador</th>
                            <th>Validado</th>
                            <th class="Acciones t-last">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t:type="AjaxFormLoop" t:id = "titulos" t:source="actual.titulos"
                            t:value="titulo" t:encoder = "encoder">
                                <t:submitnotifier>
                                    <td><input t:type="Select" t:id="nivel" t:value="titulo?.nivel" model = "niveles" t:validate="required" disabled ="noeditable"/></td>
                                    <td><input t:type="TextField" t:id="denominacion" t:value="titulo?.denominacion" t:validate="required, maxlength=50" size="10" disabled ="noeditable"/></td>
                                    <td><input t:type="TextField" t:id="especialidad" t:value="titulo?.especialidad" size="10" disabled ="noeditable"/></td>
                                    <td><input t:type="TextField" t:id="centro_estudios" t:value="titulo?.centro_estudios" t:validate="required, maxlength=50" size="10" disabled ="noeditable"/></td>
                                    <td><input t:type="TextField" t:id="lugar_emision" t:value="titulo?.lugar_emision" t:validate="required, maxlength=60" size="10" disabled ="noeditable"/></td>
                                    <td><input t:type="DateInput" t:id="fec_emision" t:date="titulo?.fec_emision"
                                        t:label="Fecha de Emisión" t:validate="required" size="8" disabled ="noeditable"/></td>
                                    <td><input t:type="TextField" t:id="colegio_profesional" t:value="titulo?.colegio_profesional" size="10" disabled ="noeditable"/></td>
                                    <td><input t:type="TextField" t:id="num_colegiatura" t:value="titulo?.num_colegiatura" size="10" disabled ="noeditable"/></td>
                                    <td><input t:type="Checkbox" t:id="agregadoTrabajador" value="titulo?.agregadoTrabajador" disabled ="true"/></td>
                                    <td><input t:type="Checkbox" t:id="validado" value="titulo?.validado" disabled ="esTrabajadorEditable"/></td>
                                    <!-- If optimistic locking is needed then uncomment this next line.
                                            <t:hidden value="titulo.version"/>
                                     -->
                                   <td>
                                        <t:if test = "editable">
                                            <t:removerowlink>Eliminar</t:removerowlink>
                                        </t:if>
                                    </td>
                                </t:submitnotifier>
                                <p:addRow>
                                    <td colspan="12" style="text-align: right">
                                        <t:if test = "editable">
                                                <t:addrowlink>Agregar Nuevo</t:addrowlink>
                                        </t:if>
                                    </td>
                                </p:addRow> 
                            </tr>
                        </tbody>
                    </table>
                    <div class="actions f-right">
                        <t:if test = "editable">
                            <input type="submit" value="Guardar" class="button f-right"/>
                        </t:if>
                    </div>
                </form>
            </div>
    </t:content>
</html>