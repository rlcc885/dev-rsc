<html t:type="layout" title="Servir - Cargos"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">



    <div id = "tabla_cargo">
        <t:grid source="cargos" rowsPerPage="5" t:add="Acciones" pagerPosition="bottom"
             row="c" exclude= "und_organica, reg_lab_con, horas_x_sem, req_hab_profesional,
                dec_jurada_byr, cargo_confianza, plant_remunerativa, ctd_ptos_ocupados_cap,
                ctd_ptos_previstos_cap, ctd_ptos_previstos_cap, ctd_ptos_presupuesto_pap">
            <t:parameter name="empty">
                No hay cargos generados
            </t:parameter>
		<p:accionesCell>
                    <a t:type="pagelink" t:page="AMCargo" t:context="c.id" href="#">Editar</a>
     
            <!--        <t:actionlink t:id="borrar" context = "c.id">Borrar</t:actionlink> -->
		</p:accionesCell>
        </t:grid>
    </div>


    <h1>Crear/Editar Cargo</h1>

        <div id="form_cargo" class="abmform">
                <t:form t:id="formularioaltacargo">
                <t:errors/>

                    Unidad Orgánica
                    <input t:type="select" t:id="select_unidad_organica"
                    model="beans" encoder="beans" value="cargo.und_organica" /><br/>

                    Código del cargo
                    <input t:type="TextField" t:id="cargo_cod_cargo"
                    t:value="cargo.cod_cargo" size="4"/><br/>

                    Denominación del cargo
                    <input t:type="TextField" t:id="cargo_den_cargo"
                    t:value="cargo.den_cargo" size="30"/><br/>


                    Estado
                    <input t:type="TextField" t:id="cargo_estado"
                    t:value="cargo.estado" size="4"/><br/>

                    Régimen Laboral /Contractual
                    <input t:type="TextField" t:id="cargo_reg_lab_con"
                    t:value="cargo.reg_lab_con" size="4"/><br/>

                    Horas semanales
                    <input t:type="TextField" t:id="cargo_horas_x_sem"
                    t:value="cargo.horas_x_sem" size="4"/><br/>

                    Código estructural del cargo
                    <input t:type="TextField" t:id="cargo_cod_est_cargo"
                    t:value="cargo.cod_est_cargo" size="4"/><br/>


                    Código funcional del cargo
                    <input t:type="TextField" t:id="cargo_cod_fun_cargo"
                    t:value="cargo.cod_fun_cargo" size="4"/><br/>

                    Requiere habilitación profesional
                    <input t:type="Checkbox" t:id="cargo_req_hab_profesional"
                    t:value="cargo.req_hab_profesional" /><br/>


                    Presenta Declaración Jurada de Bienes y Rentas
                    <input t:type="Checkbox" t:id="cargo_dec_jurada_byr"
                    t:value="cargo.dec_jurada_byr" /><br/>


                    Cargo de confianza
                    <input t:type="Checkbox" t:id="cargo_cargo_confianza"
                    t:value="cargo.cargo_confianza"/><br/>

                    Plantilla remunerativa
                    <input t:type="TextField" t:id="cargo_plantillaremunerativa"
                    t:value="cargo.plantillaremunerativa" size="4"/><br/>

                    Cant. puestos ocupados en CAP
                    <input t:type="TextField" t:id="cargo_ctd_ptos_ocupados_cap"
                    t:value="cargo.ctd_ptos_ocupados_cap" size="4"/><br/>

                    Cant. puestos previstos en CAP
                    <input t:type="TextField" t:id="cargo_ctd_ptos_previstos_cap"
                    t:value="cargo.ctd_ptos_previstos_cap" size="4"/><br/>

                    Cant. puestos presupuestados en PAP
                    <input t:type="TextField" t:id="cargo_ctd_ptos_presupuesto_pap"
                    t:value="cargo.ctd_ptos_presupuesto_pap" size="4"/><br/>

                    Cant. puestos ocupados en total
                    <input t:type="TextField" t:id="cargo_ctd_ptos_ocupados_total"
                    t:value="cargo.ctd_ptos_ocupados_total" size="4"/><br/>

                    Cant. puestos  total
                    <input t:type="TextField" t:id="cargo_ctd_puestos_total"
                    t:value="cargo.ctd_puestos_total" size="4"/><br/>

                <input id="submit" type="submit" value="Enviar"/><br/>
                <!-- <t:actionlink t:id="reset" href="#">Borrar Formulario/Nuevo</t:actionlink> -->

            </t:form>
        </div>
</html>
