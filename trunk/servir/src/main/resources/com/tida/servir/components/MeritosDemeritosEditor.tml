<html t:type="layout" title="Meritos y Demeritos del Trabajador"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <t:content>
         <h2>Meritos y Demeritos del Trabajador</h2>

     <div id = "tabla_oi">
            <t:zone t:id="listaMeritosZone">   
                <t:grid source="listadoMeritos" rowsPerPage="10" t:add="Clase,Tipo ,Acciones" pagerPosition="bottom"
                row="listaMeritos" include="fecha" inPlace="true" >
                    <t:parameter name="empty">
                    <div class="no-info">No se encontraron registros</div>
                    </t:parameter>
                    <p:claseCell>
                               <label class="datofalse">${listaMeritos.clasemeritodemerito.valor}</label>  
                    </p:claseCell>
                    <p:tipoCell>
                               <label class="datofalse">${listaMeritos.tipomeritodemerito.valor}</label>  
                    </p:tipoCell>
                    <p:accionesCell>
                           <t:actionlink t:id="editarME" zone="meritosZone" context="listaMeritos">Editar</t:actionlink> | 
                           <t:actionlink t:id="eliminarME" zone="listaMeritosZone" context="listaMeritos"> 
                            <span t:type="any" t:mixins="Confirm" t:message="Desea eliminar el registro?">
                                Eliminar
                            </span>
                           </t:actionlink>   
                    </p:accionesCell>
                </t:grid>
            </t:zone>
        </div>  

<div class="f-wrap">


</div>  
   
 <div class="box">
     <h3>Registro de Meritos del Trabajador</h3>
     
            <div t:type="zone" t:id="mensajesMEZone" >
                <t:form t:id="formulariomensajesME"  zone="mensajesMEZone"> 
                    <t:envelope t:id="envelope"/>
                    <t:errors/>
                </t:form> 
            </div>
     
     
          <div class="f-wrap">  
            <div t:type="zone" t:id="meritosZone" >
                    <t:form t:id="formularioMeritos"  zone="meritosZone">

                        <div class="f-wrap">
                           
                            <div class="f-left" >
                                <label>* Clase Merito</label>
                                <input t:type="Select" t:id="categoria" t:value="merito.clasemeritodemerito" 
                                       model="beanClaseMerito" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)" 
                                       t:blankOption="ALWAYS" />
                            </div>
                            <div class="f-left" >
                                <label>* Tipo Merito</label>
                                <input t:type="Select" t:id="tipoDocumento" t:value="merito.tipomeritodemerito" 
                                       model="beanTipoMerito" onChange="this.form.fire(Tapestry.FORM_PROCESS_SUBMIT_EVENT)" 
                                      t:blankOption="ALWAYS" />
                            </div>   
                             
                        </div>
                         <div class="f-wrap">
                           
                            <div class="f-left">
                                <label>* Motivo</label>
                                <input t:type="TextField" t:id="motivo" t:validate="required" t:value="merito.motivo" maxlength="255" />
                            </div>
                             <div class="f-left">	
                                <label>* Fecha</label>
                                <input t:type="DateField" t:id="fecha" t:value="merito.fecha" t:validate="required"
                                       size="10" />
                             </div> 
                             
                        </div>
                 <div class="f-wrap">
                        <div class="f-right">
                                    <input t:type="Submit" t:id="guardar" value="Guardar" class="button" t:mixins="confirm" t:message="Desea ejecutar esta acción?" />
                        </div>
                        </div>
                    </t:form>  
            </div> 
     
            <div t:type="zone" t:id="botonesMEZone" >
                <t:form t:id="formulariobotonesME"  zone="meritosZone">
                <div class="f-wrap">
                    <div class="f-right">
                        <input t:type="Submit" t:id="cancelME" value="Cancelar" class="button" t:mixins="confirm" t:message="Desea ejecutar esta acción?" /> 
                    </div>
                    <div class="f-right">
                        <input t:type="Submit" t:id="resetME" value="Limpiar Formulario" class="button" t:mixins="confirm" t:message="Desea ejecutar esta acción?" />  
                    </div>
                </div>
                </t:form>


            </div>
     
        </div>
        
</div>      

    </t:content>
</html>