<html t:type="layout" title="Editar Datos de Cargo"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <t:content>

    <div class="box f-wrap">
        <div id = "DatosDeCargo">
        <h3> Datos del cargo </h3>
                <!-- <table > -->
                 
    
		    <div class="datosdecargoeditor">
                            <label><b>Código del Cargo:</b></label>
                            <div class="f-left">
                                <label>${actual.cod_cargo}</label>
                            </div>
                        </div>
			

                        <div class="datosdecargoeditor">
                            <label><b>Denominación del Cargo:</b></label>
                            <div class="f-left">
                                <label>${actual.den_cargo}</label>
                            </div>
                        </div>
                <!--
                        <div class="datosdecargoeditor">
                            <label><b>Régimen Laboral /Contractual:</b></label>
                            <div class="f-left">
                                <label>${actual.regimenlaboral.getValor()}</label>
                            </div>
                        </div>-->
                          <div class="datosdecargoeditor">
                            <label><b>Estado:</b></label>
                            <div class="f-left">
                                <label>${actual.estado}</label>
                            </div>
                        </div>
                <!--
                        <div class="datosdecargoeditor">
                            <label><b>Clasificación Funcional:</b> </label>
                            <div class="f-left">
                                <label>{actual.clasificacion_funcional?.valor}</label>
                            </div>
                        </div>
                -->
                        <form t:type="form" t:id="formulariodatosdecargo" >
                            <!--<div class="datosdecargoeditor">
                                <label><b>Habilitación Profesional:</b></label>
                                <div class="datoperso_req_hab_profesional">
                                    <t:checkbox t:id="req_hab_profesional" value="actual.req_hab_profesional" size="30" disabled = "true"/>
                                </div>
                            </div>
                            <div class="datosdecargoeditor">
                                <label><b>Declaración Jurada:</b></label>
                                <div class="datoperso_req_hab_profesional">
                                    <t:checkbox t:id="dec_jurada_byr" value="actual.dec_jurada_byr" size="30" disabled = "true"/>
                                </div>
                            </div>-->
                        </form>
                <!-- </table> -->
             </div> <!-- Datos del cargo -->
              <t:zone t:id="datosDeCargoZone">
                <div id = "DatosDeCargoAsignado">
                    <h3> Datos del Cargo Asignado</h3>
                    <form t:type="form" t:id="formulariodatosdecargoasignado" t:zone="datosDeCargoZone">
                        <t:errors/>
                        <t:envelope t:id="envelope"/>
                        <table>
                            <div class="datosdecargoeditor">
                                <label><b>Fecha de Inicio:</b></label>
                                <div class="f-left">
                                    <input t:type="DateInput" t:id="fec_inicio" t:date="actual_asignado.fec_inicio"
                                    t:validate="required" t:label="Fecha de Inicio" size="10" disabled = "noeditable" t:zone="datosDeCargoZone"/>
                                </div>
                            </div>
                            <div class="datosdecargoeditor">
                                <label><b>Estado:</b></label>
                                <div class="f-left">
                                    <input t:type="Select" t:id="estado"  
                                    t:value="actual_asignado.estado" model = "estados" disabled ="noeditable" t:zone="datosDeCargoZone"/>
                                </div>
                            </div>
                            <div class ="datosdecargoeditor">
                                <label><b>Tipo de Vínculo:</b></label>
                                <div class="f-left">
                                    <input t:type="Select" t:id="vinculo" t:value="actual_asignado.tipoVinculo" 
                                    model = "vinculos" disabled ="noeditable" t:zone="datosDeCargoZone"/>
                                </div>
                            </div>
                            <t:if test="asignadoBaja">
                                <div class="datosdecargoeditor">
                                    <label><b>Fecha de Fin:</b></label>
                                    <div class="f-left">
                                        <input t:type="DateInput" t:id="fec_fin" t:date="actual_asignado.fec_fin"
                                                t:label="Fecha de Fin" size="10" disabled = "noeditable" t:zone="datosDeCargoZone"/>
                                    </div>
                                </div>
                                <div class="datosdecargoeditor">
                                    <label><b>Motivo de Cese:</b></label>
                                    <div class="f-left">
                                        <input t:type="TextField" t:id="motivo_cese" t:value="actual_asignado.motivo_cese" 
                                        size="30" disabled = "noeditable" t:zone="datosDeCargoZone"/>
                                    </div>
                                </div>
                            </t:if>
                            <t:if test="noeditable" negate="true">
                                <div id="bouttons_dce" class="actions f-right clear right">
                                    <input type="submit" value="Actualizar" class="button f-right"/>
                                </div>
                            </t:if>
                        </table>
                    </form>
                </div>
            </t:zone>
        </div>
    </t:content>
</html>