<html t:type="layout" title="Sistema SERVIR"
      t:sidebarTitle="Current Time"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <div class="organismo_titulo">
        Entidad /U. Ejecutora: ${entidadUE.denominacion}
    </div>
    <div class = "mensajes">
        ${mensajes}
    </div>
    <div t:type="zone" t:id="categoriasZone">
        <fieldset>
            Seleccione la Categoría:&nbsp;
            <t:if test="trabajadorLink" ><a t:type="actionlink" t:id="mostrarTrabajador" zone="tipoReporteZone">Trabajador</a> &nbsp;-&nbsp;</t:if>
            <t:if test="entidadLink" ><a t:type="actionlink" t:id="mostrarEntidad" zone="tipoReporteZone">Entidad/Unidad Organica</a> &nbsp;-&nbsp;</t:if>
            <t:if test="usuarioLink" ><a t:type="actionlink" t:id="mostrarUsuario" zone="tipoReporteZone">Usuario</a> &nbsp;-&nbsp;</t:if>
            <t:if test="gobiernoLink" ><a t:type="actionlink" t:id="mostrarGobierno" zone="tipoReporteZone">Nivel de Gobierno/Sector/Organización del Estado</a></t:if>
        </fieldset>
    </div>
    <div class="organismo_titulo" t:type="zone" t:id="categoriaZone" update="show">
        Categoría: ${categoria}
    </div>
    
    <div t:type="zone" t:id="tipoReporteZone" update="show">
        <t:form t:id="formularioReporte" zone="tipoReporteZone" target="_blank">
            <fieldset>
                Reporte: &nbsp;
                <input t:type="Select" t:id="tipoReporteSelect" t:value="tipoReporteSelect" model="TipoReportes" t:zone="tipoReporteZone" t:blankOption="ALWAYS"/>
                &nbsp; Formato del Reporte: &nbsp;
                <t:radiogroup t:id="type">
                    Excel <t:radio t:id="excel" value="excel"/>
                    PDF <t:radio t:id="pdf" value="pdf"/>
                </t:radiogroup>
            </fieldset>
        <t:if test="generarDisabled">     
            <fieldset>
                <div>
                    <t:if test="mostrarFiltrosTrabajador" >
                        <legend> Categoría: Trabajador </legend><br />
                        <div class="f-wrap">                             
                            <t:zone t:id="trabajadorZone" t:update="show">
                                <div class="f-left">
                                    Trabajador: &nbsp;
                                    <input t:type="TextField" t:id="titular" t:style="width:600px;" t:value="titular" t:readonly="readonly" /> 
                                    <input t:type="submit" t:id="buscarTitular" value="..." class="button f-right" onClick="javascript: mostrar();" />             
                                </div>
                            </t:zone>
                        </div>
                    </t:if>
                </div>
                
                <div>
                    <t:if test="mostrarFiltrosEntidad" >
                        <legend> Categoría: Entidad </legend><br />
                        <div class="f-wrap">                             
                            <t:zone t:id="entidadZone" t:update="show">
                                <div class="f-left">
                                    Entidad/Sub Entidad: &nbsp;
                                    <input t:type="TextField" t:id="entidadTx" t:style="width:600px;" t:value="entidadTx" t:readonly="readonly" /> 
                                    <input t:type="submit" t:id="buscarEntidad" value="..." class="button f-right" onClick="javascript: mostrar();" /> 
                                    <br />&nbsp; Nivel Organizacional:&nbsp;
                                    <input t:type="Select" t:id="uo_nivelo" t:value="nivelo" model="beanNivelOrigen" t:zone="prop:updateZoneId"/>
                                    &nbsp; Unidad Orgánica: &nbsp;
                                    <input t:type="select" t:id="select_unidadOrganicaOrigen" model="beanUOrganicasOrigen" encoder="beanUOrganicasOrigen" value="unidadRep" t:zone="prop:updateZoneId"/> 
                                </div>
                            </t:zone>
                        </div>
                    </t:if>
                </div>
                
                <div>
                    <t:if test="mostrarFiltrosUsuario" >
                        <legend> Categoría: Usuario </legend><br />
                        <div class="f-wrap">                             
                            <t:zone t:id="usuarioZone" t:update="show">
                                <div class="f-left">
                                    Usuario: &nbsp;
                                    <input t:type="TextField" t:id="usuarioTx" t:style="width:600px;" t:value="usuarioTx" t:readonly="readonly" /> 
                                    <input t:type="submit" t:id="buscarUsuario" value="..." class="button f-right" onClick="javascript: mostrar();" /> 
                                </div>
                            </t:zone>
                        </div>
                    </t:if>
                </div>
                
                <a t:type="actionlink" t:id="generarReporte" href="#" class="button f-right" style="color: #FFFFFF">Generar Reporte</a>
            </fieldset>
        </t:if>
        </t:form>
    </div>

    <script type="text/javascript">
        
        function mostrar() {
            var modal= document.getElementById('modal');
            var shade= document.getElementById('shade');
            modal.style.display=shade.style.display= 'block';
        }
        function ocultar() {
            var modal= document.getElementById('modal');
            var shade= document.getElementById('shade');
            modal.style.display=shade.style.display= 'none';
        }
    </script>
    
    <div id="shade"></div>
    <div id="modal" >
        <t:zone t:id="busZone" t:update="show" >
            <t:if test="mostrarFiltrosTrabajador" >
                <h1>Selección de Trabajador</h1>
                <div class="pane">
                    <form t:type="form" t:id="formFindTrabajador" t:zone ="busZone">
                        <div class="f-wrap">
                            <div class="f-left">
                                Nombre completo: 
                                <input t:type="TextField" t:id="trabajador_ape" t:value="nombreTrabajador" style="width: 300px;"/> 
                            </div>
                            <div class="actions f-right">
                                <input id="buscarsubmit" type="submit" value="Buscar" class="button" />
                                <input t:type="Submit" t:id="cancelFormFindTrabajador" value="Cancelar" class="button" onClick="javascript: ocultar();"/>
                            </div>
                        </div>
                    </form>
                </div>
            </t:if>
            <t:if test="mostrarFiltrosEntidad" >
                <h1>Selección de Entidad/Sub Entidad</h1>
                <div class="pane">
                    <form t:type="form" t:id="formFindEntidad" t:zone ="busZone">
                        <div class="f-wrap">
                            <div class="f-left">
                                Denominación: 
                                <input t:type="TextField" t:id="entidad_ape" t:value="nombreEntidad" style="width: 300px;"/> 
                            </div>
                            <div class="actions f-right">
                                <input id="buscarsubmit" type="submit" value="Buscar" class="button" />
                                <input t:type="Submit" t:id="cancelFormFindEntidad" value="Cancelar" class="button" onClick="javascript: ocultar();"/>
                            </div>
                        </div>
                    </form>
                </div>
            </t:if>
            <t:if test="mostrarFiltrosUsuario" >
                <h1>Selección de Usuario</h1>
                <div class="pane">
                    <form t:type="form" t:id="formFindUsuario" t:zone ="busZone">
                        <div class="f-wrap">
                            <div class="f-left">
                                Nombre completo: 
                                <input t:type="TextField" t:id="usuario_ape" t:value="nombreUsuario" style="width: 300px;"/> 
                            </div>
                            <div class="actions f-right">
                                <input id="buscarsubmit" type="submit" value="Buscar" class="button" />
                                <input t:type="Submit" t:id="cancelFormFindUsuario" value="Cancelar" class="button" onClick="javascript: ocultar();"/>
                            </div>
                        </div>
                    </form>
                </div>
            </t:if>
        </t:zone>
            <t:zone t:id="trabaZone" t:update="show">
                <t:if test="mostrar">
                    <t:grid source="trabajadores" rowsPerPage="10" t:add="Acciones" pagerPosition="bottom" row="titulart" include="nombretrabajador" inPlace="true">
                        <t:parameter name="empty">
                            <div class="no-info">No hay Trabajadores encontrados.</div>
                        </t:parameter>
                        <p:accionesCell> 
                            <t:actionlink t:id="seleccionaTitular" zone="trabaZone" context="titulart" onClick="javascript: ocultar();">Seleccionar</t:actionlink>                                                      
                        </p:accionesCell>
                    </t:grid>
                </t:if>
            </t:zone>
            <t:zone t:id="entiZone" t:update="show">
                <t:if test="mostrar">
                    <t:grid source="entidades" 
                    rowsPerPage="10" 
                    pagerPosition="bottom"
                    row="listaentidad" 
                    exclude="id,nivelgobierno,departamento,cue_entidad,sigla,sectorgobierno,organizacionestado,tipoorganismo,estado,provincia,distrito,subentidad,tiposubentidad,essubentidad" 
                    reorder="ruc,denominacion,acciones"
                    inPlace="true" 
                    t:add="Acciones">
                        <t:parameter name="empty">
                            <div class="no-info">No se encontraron coincidencias</div>
                        </t:parameter>
                        <p:accionesCell> 
                            <t:actionlink t:id="seleccionaEntidad" zone="entiZone" context="listaentidad" onClick="javascript: ocultar();">Seleccionar</t:actionlink>                                                      
                        </p:accionesCell>
                    </t:grid>
                </t:if>
            </t:zone>
            <t:zone t:id="usuaZone" t:update="show">
                <t:if test="mostrar">
                    <t:grid inPlace="true" 
                            source="usuarios" 
                            rowsPerPage="10" 
                            t:add="Acciones" 
                            pagerPosition="bottom" 
                            row="u" 
                            exclude= "nrodocumento,estadodesc,documentoidentidadid,apellidos,id,md5Clave,intentosFallidos,clave,rolid,ultimoCambioClave,emaillaboral,trabajadorid,estado,entidadid,telefono,cargo,fechacreacion,observacion" 
                            reorder="login,nombres,apellidopaterno,apellidomaterno">
                        <t:parameter name="empty">
                            No se han encontrado coincidencias.
                        </t:parameter>
                        <p:accionesCell> 
                            <t:actionlink t:id="seleccionaUsuario" zone="usuaZone" context="u" onClick="javascript: ocultar();">Seleccionar</t:actionlink>                                                      
                        </p:accionesCell>
                    </t:grid>
                </t:if>
            </t:zone>
    </div>
</html>