<html t:type="layout" title="Sistema SERVIR"
      t:sidebarTitle="Current Time"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <div class="organismo_titulo">
        Entidad /U. Ejecutora: ${entidadUE.denominacion}
    </div>
    <div class = "mensajes">
        ${mensajes}
    </div>
    <div t:type="zone" t:id="categoriasZone">
        <fieldset>
            Seleccione la Categoría:&nbsp;
            <a t:type="actionlink" t:id="mostrarTrabajador" href="#">Trabajador</a> &nbsp;-&nbsp;
            <a t:type="actionlink" t:id="mostrarEntidad" href="#">Entidad/Unidad Organica</a> &nbsp;-&nbsp;
            <a t:type="actionlink" t:id="mostrarUsuario" href="#">Usuario</a> &nbsp;-&nbsp;
            <a t:type="actionlink" t:id="mostrarGobierno" href="#">Nivel de Gobierno/Sector/Organización del Estado</a>
        </fieldset>
    </div>
    <div class="organismo_titulo">
        Categoría: ${categoria}
    </div>
    <div t:type="zone" t:id="tipoReporteZone">
        <t:form t:id="formularioReporte" zone="tipoReporteZone">
            <fieldset>
                Tipo de Reporte: &nbsp;
                <input t:type="Select" t:id="tipoReporteSelect" t:value="tipoReporteSelect" model="TipoReportes" t:zone="tipoReporteZone" t:blankOption="ALWAYS"/>
                &nbsp; Formato del Reporte: &nbsp;
                <t:radiogroup value="radio">
                    Excel <t:radio t:id="Excel" value="0"/>
                    PDF <t:radio t:id="PDF" value="1"/>
                </t:radiogroup>
            </fieldset>
            
            <fieldset>
                <input t:type="Submit" t:id="generarReporte" value="Generar Reporte" class="button f-right" />
            </fieldset>
        </t:form>
    </div>

    <script>
        function mostrarEsconder() {
        cach.visibility = "visible";
        }
    </script>
</html>