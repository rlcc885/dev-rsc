<html t:type="layout" title="Editar Publicaciones"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

        <t:content>      
     
       <fieldset>
          <div class="f-wrap">  
            <div t:type="zone" t:id="proIntelectualZone" >
                    <t:form t:id="formularioprointelectual"  zone="proIntelectualZone">

                        <div class="f-wrap">
                            <div class="f-left">
                                 <label>* Clase: </label>
                                 <input t:type="Select" t:id="clasepublicacion" t:value="publicacion.clasepublicacion" 
                                           model="beanClasePublicacion"
                                           t:validate="required" t:blankOption="ALWAYS" />
                            </div>
                            <div class="f-left">
                                 <label>* Tipo: </label>
                                 <input t:type="Select" t:id="tipo" t:value="publicacion.tipo" 
                                           model="beanTipo"
                                           t:validate="required" t:blankOption="ALWAYS" />
                            </div>                           
                        </div>
                        <br/>
                        <div class="f-wrap">
                            <div class="f-left">
                                 <label>* Título: </label>
                                <input t:type="TextField" t:id="titulo"
                                       t:value="publicacion.titulo" t:validate="required" size="50"/>
                            </div>
                             <div class="f-left">
                                <label>Fecha: </label>
                                <input t:type="DateField" t:id="fecha" 
                                        t:value="publicacion.fecha" size="25" />
                            </div>                            
                        </div> 
                        <div class="f-wrap">                            
                             <div class="f-left">
                                <label>Descripción: </label>
                                <input t:type="TextArea" t:id="descripcion"
                                        t:value="publicacion.descripcion" cols="43"/>
                                <label><i>(Máximo 250 caracteres)</i></label>
                            </div>
  
                        </div>
                        <br/>
                        <div class="f-wrap">               
                              <t:if test="${bvalidausuario}">
                            <div class="f-left">
                                    <label>Revisado: </label>
                                    <input t:type="Checkbox" t:id="validado" 
                                           t:value="publicacion.validado"/>
                            </div>
                              </t:if>
                        </div>                    
                        <div class="f-right">
                                    <input t:type="Submit" t:id="guardar" value="Guardar" class="button" t:mixins="confirm" t:message="Desea ejecutar esta acción?" />
                        </div>
                    </t:form>

            </div>    
            </div> 
     
            <div t:type="zone" t:id="botonesZone" >
                <t:form t:id="formulariobotones"  zone="proIntelectualZone">
                <div class="f-wrap">
                    <div class="f-right">
                        <input t:type="Submit" t:id="cancel" value="Cancelar" class="button" t:mixins="confirm" t:message="Desea ejecutar esta acción?" /> 
                    </div>
                    <div class="f-right">
                        <input t:type="Submit" t:id="reset" value="Limpiar Formulario" class="button" t:mixins="confirm" t:message="Desea ejecutar esta acción?" />  
                    </div>
                </div>
                </t:form>


            </div>
   </fieldset>
    <div class="f-wrap">                        
        (*) Campos Obligatorios
    </div>
  <br/>
  <div t:type="zone" t:id="mensajesPIZone" >
        <t:form t:id="formulariomensajespi"  zone="mensajesPIZone"> 
            <t:envelope t:id="envelope"/>
            <t:errors/>
        </t:form> 
  </div>
  <br/>
 <div id = "tabla_oi">
            <t:zone t:id="listaProIntelectualZone">   
                <t:grid source="listadoProIntelectual" rowsPerPage="10" t:add="Clase,Tipo,Revisado,Acciones" pagerPosition="bottom"
                row="listaprointelectual" include="titulo" inPlace="true" >
                    <t:parameter name="empty">
                    <div class="no-info">No se encontraron registros</div>
                    </t:parameter>
                    <p:claseCell>
                           <t:if test="${listaprointelectual.validado}">
                               <label class="datofalse">${listaprointelectual.clasepublicacion.valor}</label>  
                           </t:if>
                            <t:if test="${listaprointelectual.validado}" negate="true">
                               <label class="datotrue">${listaprointelectual.clasepublicacion.valor}</label>  
                           </t:if>
                    </p:claseCell>
                    <p:tipoCell>
                           <t:if test="${listaprointelectual.validado}">
                               <label class="datofalse">${listaprointelectual.tipo.valor}</label>  
                           </t:if>
                            <t:if test="${listaprointelectual.validado}" negate="true">
                               <label class="datotrue">${listaprointelectual.tipo.valor}</label>  
                           </t:if>
                    </p:tipoCell>
                    <p:tituloCell>
                           <t:if test="${listaprointelectual.validado}">
                               <label class="datofalse">${listaprointelectual.titulo}</label>  
                           </t:if>
                            <t:if test="${listaprointelectual.validado}" negate="true">
                               <label class="datotrue">${listaprointelectual.titulo}</label>  
                           </t:if>
                    </p:tituloCell>
                     <p:revisadoCell>
                         <t:if test="${bvalidausuario}">
                           <t:if test="${listaprointelectual.validado}">
                               <label class="datofalse">SI</label>  
                           </t:if>
                            <t:if test="${listaprointelectual.validado}" negate="true">
                               <label class="datotrue">NO</label>  
                           </t:if>
                         </t:if>
                    </p:revisadoCell>
                    <p:accionesCell>
                        <t:if test="${bvalidausuario}">
                        <t:if test="${listaprointelectual.validado}" negate="true">
                               <t:actionlink t:id="editar" zone="proIntelectualZone" context="listaprointelectual">Editar</t:actionlink> | 
                            
                        <t:actionlink t:id="eliminar" zone="listaProIntelectualZone" context="listaprointelectual"> 
                            <span t:type="any" t:mixins="Confirm" t:message="Desea eliminar el registro?">
                                Eliminar
                            </span>
      
                        </t:actionlink> 
                        </t:if> 
                        </t:if>
                    </p:accionesCell>
                    
                </t:grid>
            </t:zone>
        </div>
  
</t:content>
</html>