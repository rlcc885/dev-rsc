<html t:type="layout" title="Servir - Cambiar Entidad"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
<!--     <h2> Selección de Entidad /U. Ejecutora </h2>-->
     <div class="box-background-title">
        <span class="box-title-01">
            Registro de Sanción
        </span>
    </div>
    <div id="panel-01" class="box">
        <fieldset>
            <legend>Datos del Sancionado</legend>
        <t:zone t:id="busquedaZone">
            <form t:type="form" t:id="formbusqueda" t:zone="busquedaZone">
                <div class="f-wrap">
                    <div class="f-left">                        
                        <input t:type="Checkbox" t:id="es_trabajador" t:value="bestrabajador"/>   
                        ¿Es Trabajador del Sector Público?
                    </div>
                </div>
                <div class="f-wrap">
                    <div class="f-left">
                        <label>* Entidad</label>
                        <input t:type="TextField" t:id="entidad_descripcion"
                                t:value="bentidad" size="100" t:disabled="true"/>
                    </div>
                    <div class="f-left" style="position:relative; top:14px; left:-10px;">
                        <input t:id="buscarenti" t:type="submit" value="..." class="button" onClick="javascript: mostrar();"/>
                    </div>
                </div>
                <div class="f-wrap">
                    <div class="f-left" style="position:relative; top:18px;">
                        <label>Buscar Trabajador</label>
                    </div>
                    <div class="f-left" style="position:relative; top:12px; left:-10px;">
                        <input t:id="buscartraba" t:type="submit" value="..." class="button" onClick="javascript: mostrar();"/>
                    </div>
                    <div class="f-left">
                        <label>* Tipo Documento</label>
                        <input t:type="Select" t:id="documento_identidad"                                
                               t:value="bdocidentidad" model="beandocumentoidentidad" t:zone="busquedaZone" t:blankOption="ALWAYS"  t:validate="required"/>
                    </div>
                    <div class="f-left">
                        <label>* Número de Documento</label>
                        <input t:type="TextField" t:id="numero_documento"
                                t:value="bnumerodocumento" size="30" t:validate="required"/>
                    </div>
                    <div class="f-left" style="position:relative; top:14px; left:-10px;">
                        <input t:id="buscarpersona" t:type="submit" value="..." class="button"/>
                    </div>
                </div>
                <div class="f-wrap">
                    <div class="f-left">
                        <label>* Nombres</label>
                        <input t:type="TextField" t:id="nombres" value="bnombres" size="30" t:disabled="true"/>
                    </div>
                    <div class="f-left">
                        <label>* Apellido Paterno</label>
                        <input t:type="TextField" t:id="apellido_Paterno" value="bapaterno" size="30" t:disabled="true"/>
                    </div>
                    <div class="f-left">
                        <label>* Apellido Materno</label>
                        <input t:type="TextField" t:id="apellido_Materno" value="bamaterno" size="30" t:disabled="true"/>
                    </div>
                </div>
                <br/>
                <div class="f-wrap">
                    <div class="f-left">
                        <label>* Regimen Laboral/Contractual</label>
                        <input t:type="Select" t:id="regimen_laboral"                                
                               t:value="bregimen" model="beanregimenlaboral" t:zone="busquedaZone" t:disabled="true"/>
                    </div>
                    <div class="f-left">
                        <label>Puesto/Cargo</label>
                        <input t:type="TextField" t:id="cargo_puesto" value="bpuesto" size="60" t:disabled="true"/>
                    </div>
                </div>
                <br/>
                <div class="f-wrap">
                   <div class="f-left" style="width: 250px; height: 80px;">
                        <fieldset>
                        <legend>Tiempo de Servicios</legend>
                            <div class="f-left">
                                <label>Dias</label>
                                <input t:type="TextField" t:id="tiempodia" value="nuevasancion.tiem_ser_dia" size="5" t:disabled="true"/>
                            </div>
                            <div class="f-left">
                                <label>Meses</label>
                                <input t:type="TextField" t:id="tiempomes" value="nuevasancion.tiem_ser_mes" size="5" t:disabled="true"/>
                            </div>
                            <div class="f-left">
                                <label>Años</label>
                                <input t:type="TextField" t:id="tiempoanio" value="nuevasancion.tiem_ser_anio" size="5" t:disabled="true"/>
                            </div>
                        </fieldset>
                   </div>
                   <div class="f-left">
                        <label>Estado en el Puesto/Cargo</label>
                        <input t:type="TextField" t:id="estado_puesto" value="bestadopuesto" size="30" t:disabled="true"/>
                   </div>
                </div>   
            </form>
        </t:zone>        
       </fieldset>
     
        <t:zone t:id="sancionZone">
            <div>
                <script>
                    jQuery(document).ready(function() {
                    jQuery('.fecha_docnot').datepick({dateFormat: 'dd/mm/yyyy'});
                    jQuery('.fecha_docsan').datepick({dateFormat: 'dd/mm/yyyy'});
                    jQuery('.fec_inicio').datepick({dateFormat: 'dd/mm/yyyy'});
                    jQuery('.fec_fin').datepick({dateFormat: 'dd/mm/yyyy'});
                    });
                </script>
            </div>  
            <form t:type="form" t:id="formsancion" t:zone="sancionZone">
              <fieldset>
              <legend>Datos de la Sanción</legend>
                <div class="f-wrap">
                    <div class="f-left">
                        <label>* Categoría de la Sanción</label>
                        <input t:type="Select" t:id="categoria_sancion"                                
                               t:value="categoriasancion" model="beancategoriasancion" t:zone="sancionZone"/>
                    </div>
                    <div class="f-left">
                        <label>* Tipo de Sanción</label>
                        <input t:type="Select" t:id="tipo_sancion"                                
                               t:value="tiposancion" model="beantiposancion" t:zone="sancionZone"/>
                    </div>
                </div>
               <br/>
               <fieldset>
                   <legend>Datos de la Notificación</legend>
                   <div class="f-wrap">
                       <div class="f-left">
                            <label>* Tipo de Documento</label>
                            <input t:type="Select" t:id="tipo_docnot"                                
                                t:value="nuevasancion.tipo_documentonot" model="beantipodocnot" t:zone="sancionZone" t:validate="required" t:blankOption="ALWAYS" />
                       </div>
                       <div class="f-left">
                            <label>* Descripción o Número</label>
                            <input t:type="TextField" t:id="num_docnot" value="nuevasancion.numdocnot" size="30" t:validate="required"/>
                       </div>
                       <div class="f-left">
                            <label>* Fecha</label>
                            <input t:type="TextField" t:id="fecha_docnot" t:value="fechadocnot" size="25" t:validate="required,regexp" class="fecha_docnot pictureInputDate"/>
                       </div>
                   </div>
                   <div class="f-left">
                        <label>* Autoridad que Notifica</label>
                        <input t:type="TextField" t:id="autoridad_not" value="autoridadnot" size="100" t:validate="required" t:disabled="true"/>
                   </div>
                   <div class="f-left" style="position:relative; top:14px; left:-10px;">
                        <input t:id="buscarautoridadnot" t:type="submit" value="..." class="button" />
                   </div>
               </fieldset>
               <br/>
               <fieldset>
                   <legend>Datos del Documento que Sanciona</legend>
                   <div class="f-wrap">
                       <div class="f-left">
                            <label>* Tipo de Documento</label>
                            <input t:type="Select" t:id="tipo_docsan"                                
                                t:value="nuevasancion.tipo_documentosan" model="beantipodocsan" t:zone="sancionZone" t:validate="required" t:blankOption="ALWAYS" />
                       </div>
                       <div class="f-left">
                            <label>* Descripción o Número</label>
                            <input t:type="TextField" t:id="num_docsan" value="nuevasancion.numdocsan" size="30" t:validate="required"/>
                       </div>
                       <div class="f-left">
                            <label>* Fecha</label>
                            <input t:type="TextField" t:id="fecha_docsan" t:value="fechadocsan" size="25" t:validate="required,regexp" class="fecha_docsan pictureInputDate"/>
                       </div>                       
                   </div>
                   <div class="f-left">
                            <label>* Autoridad que Sanciona</label>
                            <input t:type="TextField" t:id="autoridad_san" value="autoridadsan" size="100" t:validate="required" t:disabled="true"/>
                    </div>
                   <div class="f-left" style="position:relative; top:14px; left:-10px;">
                        <input t:id="buscarautoridadsan" t:type="submit" value="..." class="button" />
                   </div>
               </fieldset>
               <div class="f-wrap">
                    <div class="f-left">
                        <label>Descripción: </label>
                        <input t:type="TextArea" t:id="descripcion" t:value="nuevasancion.causa" style="width: 350px;" rows="5" 
                                t:validate="maxLength=250"/>
                        <br />
                        <i>(Máximo 250 caracteres)</i>
                    </div>
                    <div class="f-left" style="width: 200px; height: 130px;">
                        <fieldset>
                        <legend>Periodo de Inhabilitación</legend>
                        <div class="f-wrap">                            
                            <div class="f-left">
                                <label>* Fecha de Inicio</label>
                                <input t:type="TextField" t:id="fec_inicio" t:value="fecinicio" size="25" t:validate="regexp" class="fec_inicio pictureInputDate"/>
                            </div>
                            <div class="f-left">
                                <label>* Fecha de Finalización</label>
                                <input t:type="TextField" t:id="fec_fin" t:value="fecfin" size="25" t:validate="regexp" class="fec_fin pictureInputDate"/>
                            </div>                        
                        </div>
                        </fieldset>
                        
                    </div>
              </div>
              <div class="f-left">
                 <label>Descripción: </label>
                <input t:type="TextArea" t:id="observaciones" t:value="nuevasancion.observaciones" style="width: 350px;" rows="5" 
                        t:validate="maxLength=150"/>
                <br />
                <i>(Máximo 150 caracteres)</i>
              </div>
               
            </fieldset>   
            <div class="actions">
                <input t:type="Submit" t:id="save" value="Guardar" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button f-right"/>
                <input t:type="Submit" t:id="reset" value="Limpiar Formulario" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button f-right"/>
            </div>
            </form>
        </t:zone>
     
        
        
        
    <div id="shade"></div>
        
    <div id="modal"> 
        <h1>Selección de entidad</h1>
        <div class="pane">
            <t:zone t:id="busZone" t:update="show">
                <form t:type="form" t:id="formulariobusqueda" t:zone ="busZone">                    
                    <div class="actions f-right">
                        <input id="buscarsubmit" type="submit" value="Buscar" class="button" /> 
                        <input t:type="Submit" t:id="cancel" value="Cancelar" class="button" onClick="javascript: ocultar();"/>
                    </div> 

                </form>
            </t:zone>
            <br/>
            <br/>
        </div>
        <br/>
        <br/>
        <br/>
    </div>
    </div>
    <script type="text/javascript">
        var modal= document.getElementById('modal');
        var shade= document.getElementById('shade');
        function mostrar() {
        modal.style.display=shade.style.display= 'block';
        };
        function ocultar() {
        modal.style.display=shade.style.display= 'none';
        };
    </script>

</html>
