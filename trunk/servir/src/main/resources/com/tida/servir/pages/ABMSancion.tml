<html t:type="layout" title="Servir - Cambiar Entidad"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
<!--     <h2> Selección de Entidad /U. Ejecutora </h2>-->
     <div class="box-background-title">
        <span class="box-title-01">
            Buscar ${mensaje}
        </span>
    </div>
    <div id="panel-01" class="box">
        <t:zone t:id="busquedaZone">
            <form t:type="form" t:id="formbusqueda" t:zone="busquedaZone">
                <div class="f-wrap">
                    <div class="f-left">                        
                        <input t:type="Checkbox" t:id="es_trabajador" t:value="bestrabajador"/>   
                        ¿Es Trabajador del Sector Público?
                    </div>
                </div>
                <div class="f-wrap">
                    <div class="f-left">
                        <label>Tipo Documento</label>
                        <input t:type="Select" t:id="tipo_documento"                                
                               t:value="btipodocumento" model="beantipodocumento" t:zone="busquedaZone" />
                    </div>
                    <div class="f-left">
                        <label>Número de Documento</label>
                        <input t:type="TextField" t:id="numero_documento"
                                t:value="bnumerodocumento" size="30" />
                    </div>
                </div>
                <div class="f-wrap">
                    <div class="f-left">
                        <label>Nombres</label>
                        <input t:type="TextField" t:id="nombres" value="bnombres" size="30"/>
                    </div>
                    <div class="f-left">
                        <label>Apellido Paterno</label>
                        <input t:type="TextField" t:id="apellido_Paterno" value="bapaterno" size="30"/>
                    </div>
                    <div class="f-left">
                        <label>Apellido Materno</label>
                        <input t:type="TextField" t:id="apellido_Materno" value="bamaterno" size="30"/>
                    </div>
                </div>
                <div class="f-wrap">
                    <input t:type="Submit" t:id="share" value="Buscar" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button f-right"/>
                    <input t:type="Submit" t:id="resetbus" value="Limpiar Formulario" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button f-right"/>
                    <input t:type="Submit" t:id="cancelbus" value="Cancelar" t:mixins="confirm" t:message="Desea ejecutar esta acción?" class="button f-right"/>
                </div>                
            </form>
        </t:zone>        
    </div>
    <t:zone t:id="listadoZone">

    </t:zone>
</html>
