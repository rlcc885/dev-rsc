<html t:type="layoutlogin" title="Sistema SERVIR"
      t:sidebarTitle="Current Time"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
    <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->


    <div class = "login">
        <h3>Inicio de Sesión</h3>
        <div class = "box">
                <!-- <div id="dialog" title="Olvido su clave">${textoClave}</div> -->

            <div class = "OrganismosInformantes" t:id="organismosZone" t:type="zone">
                <t:if test="muestrosubmit">
                    <t:form t:id="formulariologin"  t:zone="organismosZone" >
                        <t:errors/>
                        <t:if test="muestrosubmit">
                            <div class="clear f-wrap">
                                <div class="f-left">
                                    <t:label for="login"/>
                                </div>
                                <div class="f-left">
                                    <input t:type="TextField" t:id="login" t:value="login" size="30"  />
                                </div>
                            </div>
                            <div class="clear f-wrap">
                                <div class="f-left">
                                    <t:label for="clave"/>
                                </div>
                                <div class="f-left">
                                    <input t:type="PasswordField" t:id="clave" size="30"  />
                                </div>
                            </div>
                            <div class="clear f-wrap">
                                <input id="loginSubmit" type="submit" value="Ingresar" class="button f-right" />
                            </div>
                        </t:if>
                    </t:form>
                </t:if>

                <!--
                            <t:if test="administrador">
                                <t:form t:id="formularioorganismos"  >
                                    <label> Seleccione Entidad/U. Ejecutora</label>
                                    <t:EntidadSelect  t:id="entidades" t:entidad ="eue" />
                        </t:form>
                          </t:if>
                -->
            </div>

            <script language="javaScript"> 
                function popup(ventana) {
                    $(ventana).toggle('slow');
                }
            </script> 
            <div class="f-wrap centerImagenesIndex">
<!--                <div class="f-left">
                    <div class="seguridad-left">
                    </div>
                </div>-->
                <div class="centerClave">
                    <a t:type="pagelink" page="RecuperarClave">Transparencia</a>
                    <br />
                    <a t:type="pagelink" page="RecuperarClave">Olvido su clave?</a>
                    <br />
                    <!-- <input onclick="javascript:popup('textoIndexClave');">Olvido su clave?</input><br/> -->
                    <a href="javascript:popup('textoIndexUsuario');">Solicitar acceso al módulo de sanciones</a>
                    <br />
                    <a t:type="actionlink" t:id="returnstreamresponse" href="#">Guía del sistema</a>
                </div>
<!--                <div class="f-left">
                    <div class="guia-right">
                    </div>
                </div>-->
                <div class="centerClave">
                    

                </div>
            </div>
        </div>
    </div>

    <!-- <div class = "login box">
        <div class="f-wrap">
            <div class="f-left">
                <img src="images/seguridad.jpg" border="0" align="center" width="25" height="100%"></img>
                <img jwcid="@Image" image="/servir/seguridad.jpg" alt="View Tapestry Home"/>
            </div>
            <div class="f-left">
                <a href="images/guia.jpg">Sistema SERVIR</a>
            </div>            
        </div>
    </div> -->


    <div id="textoIndexClave" style="display:none">
        <span id="close">   
            <a href="javascript:popup('textoIndexClave')" style="text-decoration: none">X</a>
        </span>
        <p>${message:olvidoClave}</p>
    </div>

    <div id="textoIndexUsuario" style="display:none">
        <span id="close">   
            <a href="javascript:popup('textoIndexUsuario')" style="text-decoration: none">X</a>
        </span>
        <p>${message:nuevoUsuario}</p>
    </div>

</html>
