<html t:type="layout" title="Servir - Transferencia masiva de trabajadores"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">


           <t:Menu/>

    <h2> Transferencia masiva de trabajadores </h2>


         <div t:type="zone" t:id="selectZone" class="selectform" >
         <t:if test="seleccion">
                <t:form t:id="formularioseleccion" t:zone="selectZone">
                <t:errors/>


                    Organismo Origen: <br/>
                    <select t:type="select" t:id="select_organismo_origen"
                    model="BeanOrganismos" encoder="BeanOrganismos"
                     value="organismoOrigen" t:validate="required"/><br/>

                    Organismo Destino:<br/>
                    <select t:type="select" t:id="select_organismo_destino"
                    model="BeanOrganismos" encoder="BeanOrganismos"
                     value="organismoDestino" t:validate="required"/><br/>
<!--
                     Se transfieren
                     <t:if test="seleccionaOrganos">
                     </t:if>
-->
                    <br/>
                    <input id="Seleccionar" type="submit" value="Seleccionar"/><br/>
              </t:form>
            </t:if>
         
         
         <t:if test="transfer">
         Â¿Transferir ${cantTrabajadores} trabajadores
            desde el <br/>
            Entidad /U. Ejecutora ${organismoOrigen.denominacion} al <br/>
            Entidad /U. Ejecutora ${organismoDestino.denominacion} ?
                <t:form t:id="formulariotransferencia" t:zone="selectZone" >
                <t:errors/>

                <br/>
            <input id="Transferir" type="submit" value="Transferir"/><br/>
            <br/>
            <input id="cancelar" type="submit" value="cancelar"/><br/>

              </t:form>
         </t:if>
            </div>


</html>