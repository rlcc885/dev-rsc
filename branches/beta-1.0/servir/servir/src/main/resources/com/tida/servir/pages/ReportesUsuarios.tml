<html t:type="layout" title="Sistema SERVIR - Reportes de usuarios"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"    
      xmlns:p="tapestry:parameter">

      <t:Menu/>
        <div class="organismo_titulo">
            Entidad /U. Ejecutora: ${entidadUE.denominacion}
        </div>

            <h2> Reportes usuarios</h2>

            <div class = "box">
                <h3> Selecciones los par√°metros para los reportes </h3>
                <t:form t:id="formularioReporte">
                    <t:errors/>
                    <div class="f-wrap">
                        <div class="f-left">
                            <t:label for="fechadesde">Fecha Desde</t:label>
                            <t:dateInput t:id="fechadesde" t:date="fechaDesde"
                                t:label="Fecha desde" />
                        </div>
                        <div class="f-left">
                            <t:label for="fechahasta">Fecha hasta</t:label>
                            <t:dateInput t:id="fechahasta" t:date="fechaHasta"
                                t:label="Fecha hasta" />
                        </div>
                        <div class="f-left">
                            <t:label for="identUsuario"/>
                            <input t:type="TextField" t:id="identUsuario" t:value="identUsuario"
                                 t:validate="required"/>
                        </div>
                    </div>
                    <div class="actions clear">
                        <input type="submit" value="Actualizar" class="button"/>
                    </div>
                </t:form>
                </div>
                <br/>
                <!-- Zona de links de reportes -->
                <div t:type="zone" t:id="reportesZone" class="selectform" >
                    <t:if test = "muestroReportes">
                        <div class = "box">
                            <h3> Seleccione un reporte </h3>
                            <a t:type="eventLink" t:event="reporteUsuarios"  t:context="literal:B2" href="#">Operaciones realizadas por el usuario</a>
                            <br/>
                            <a t:type="eventLink" t:event="reporteUsuarios" t:context="literal:B3" href="#">Log de Accesos del Usuario</a>
                            <br/>
                        </div>
                    </t:if>
                       
                </div>
</html>