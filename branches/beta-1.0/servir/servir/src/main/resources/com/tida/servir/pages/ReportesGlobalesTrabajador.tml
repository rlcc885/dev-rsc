<html t:type="layout" title="Sistema SERVIR"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"    
      xmlns:p="tapestry:parameter">

      <t:Menu/>
        <div class="organismo_titulo">
            Entidad /U. Ejecutora: ${entidadUE.denominacion}
        </div>

            <h2> Reportes globales de trabajador</h2>
                <t:form t:id="formularioReporte">
                    <t:errors/>
                    <div class="f-wrap">
                        <div class="f-left">
                            <t:label for="tipoDocumento" /> 
                            <t:select t:id="tipoDocumento" t:value="nuevo.tipoDocumento"
                            model="tiposDoc" value="nuevo.tipoDocumento" t:validate="required" />
                        </div>
                        <div class="f-left">
                            <t:label for="nroDocumento"/>
                            <input t:type="TextField" t:id="nroDocumento" t:value="nuevo.nroDocumento"
                                size="8" t:validate="required, minlength=5, maxlength=8"/>
                        </div>
                    </div>
                    <div class="actions clear ">
                        <input type="submit" value="Buscar" class="button"/>
                    </div>
                </t:form>

                <!-- Zona de links de reportes -->
                <div t:type="zone" t:id="reportesZone" class="selectform" >
                    <t:if test = "muestroReportes">
                        <h3> Reportes Espec√≠ficos </h3>
                        <a t:type="eventLink" t:event="reporteTrabajador"  t:context="literal:A2" href="#">Ficha de Datos Personales</a>
                        <br/>
                        <a t:type="eventLink" t:event="reporteTrabajador" t:context="literal:A4-1" href="#">Cursos del Trabajador</a>
                        <br/>
                        <a t:type="eventLink" t:event="reporteTrabajador" t:context="literal:A4-2" href="#">Publicaciones del Trabajador</a>
                        <br/>
                        <a t:type="eventLink" t:event="reporteTrabajador" t:context="literal:A4-3" href="#">Titulos del Trabajador</a>
                        <br/>
                        <a t:type="eventLink" t:event="reporteTrabajador" t:context="literal:A5" href="#">Resumen de Legajo</a>
                        <br/>
  

                   </t:if>
                </div>
</html>